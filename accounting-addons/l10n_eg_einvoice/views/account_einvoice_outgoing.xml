<odoo>

    <record id="account_einvoice_outgoing_view_form" model="ir.ui.view">
        <field name="name">account_einvoice_outgoing_view_form</field>
        <field name="model">account.einvoice.outgoing</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Submit Document" name="action_submit"
                            invisible="action_type != submit or state = sent"
                            type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="new,sent"/>
                </header>
                <sheet>
                    <group>
                        <field name="action_type"/>
                        <field name="last_date_sent"/>
                    </group>
                    <group>
                        <field name="move_ids" widget="many2many_tags"/>
                        <field name="method"/>

                    </group>
                    <notebook>
                        <page string="Request">
                            <group>
                                <group>
                                    <field name="request_url"/>
                                    <field name="request_header"/>
                                    <field name="request_data"/>
                                    <field name="request_params"/>
                                </group>

                            </group>
                        </page>
                        <page string="Response">
                            <group>
                                <field name="result"/>
                                <field name="error"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_einvoice_outgoing_view_tree" model="ir.ui.view">
        <field name="name">account_einvoice_outgoing_view_tree</field>
        <field name="model">account.einvoice.outgoing</field>
        <field name="arch" type="xml">
            <list>
                <field name="action_type"/>
                <field name="last_date_sent"/>
                <field name="move_ids" widget="many2many_tags"/>
                <field name="method"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="account_einvoice_outgoing_action" model="ir.actions.act_window">
        <field name="name">Outgoing</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.einvoice.outgoing</field>
        <field name="context">{'create': False, 'edit': False}</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="einvoice_category_menu" model="ir.ui.menu">
        <field name="name">E-Invoice Requests</field>
        <field name="parent_id" ref="base.menu_custom"/>
        <field name="sequence" eval="1000"/>
    </record>

    <record id="outgoing_einvoice_menu" model="ir.ui.menu">
        <field name="name">Outgoing</field>
        <field name="action" ref="account_einvoice_outgoing_action"/>
        <field name="parent_id" ref="einvoice_category_menu"/>
    </record>

</odoo>
