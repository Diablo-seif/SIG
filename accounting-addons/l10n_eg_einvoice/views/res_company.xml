<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_form" model="ir.ui.view">
        <field name="name">inherit.res.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <field name="street" position="replace">
                <div class="d-block">
                    <field name="building_number" placeholder="Building No." class="d-inline w-25 pr-1"/>
                    <field name="street" placeholder="Street..." class="d-inline w-75"/>
                </div>
            </field>
            <field name="vat" position="after">
                <field name="invoice_activity_type_id"/>
            </field>
        </field>
    </record>

</odoo>
