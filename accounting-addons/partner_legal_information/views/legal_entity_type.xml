<odoo>

    <record id="legal_entity_type_form" model="ir.ui.view">
        <field name="name">legal.entity.type.form</field>
        <field name="model">legal.entity.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="legal_entity_type_tree" model="ir.ui.view">
        <field name="name">legal.entity.type.tree</field>
        <field name="model">legal.entity.type</field>
        <field name="arch" type="xml">
            <list default_order="">
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="legal_entity_type_action" model="ir.actions.act_window">
        <field name="name">Legal Entity Type</field>
        <field name="res_model">legal.entity.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="legal_entity_type_menu"
              name="Legal Entity Type"
              action="legal_entity_type_action"
              parent="account.account_invoicing_menu"
              sequence="10"/>

</odoo>
