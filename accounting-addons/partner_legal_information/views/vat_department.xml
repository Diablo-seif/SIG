<odoo>

    <record id="vat_department_form" model="ir.ui.view">
        <field name="name">vat.department.form</field>
        <field name="model">vat.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="vat_department_tree" model="ir.ui.view">
        <field name="name">vat.department.tree</field>
        <field name="model">vat.department</field>
        <field name="arch" type="xml">
            <list default_order="">
                <field name="name"/>
                <field name="code"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="vat_department_action" model="ir.actions.act_window">
        <field name="name">VAT Departments</field>
        <field name="res_model">vat.department</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="vat_department_menu"
              name="VAT Departments"
              action="vat_department_action"
              parent="account.account_invoicing_menu"
              sequence="10"/>

</odoo>
