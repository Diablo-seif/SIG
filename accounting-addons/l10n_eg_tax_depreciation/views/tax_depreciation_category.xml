<odoo>
    <record id="tax_depreciation_category_action" model="ir.actions.act_window">
        <field name="name">Tax Depreciation Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tax.depreciation.category</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>
    <record id="tax_depreciation_category_tree" model="ir.ui.view">
        <field name="name">tax.depreciation.category.tree</field>
        <field name="model">tax.depreciation.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="percentage"/>
                <field name="tax_depreciation_opening_balance"/>
                <field name="tax_depreciation_opening_balance_date"/>
            </list>
        </field>
    </record>
    <record id="tax_depreciation_category_search_view" model="ir.ui.view">
        <field name="name">tax.depreciation.category.search</field>
        <field name="model">tax.depreciation.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="percentage"/>
                <field name="tax_depreciation_opening_balance"/>
                <field name="tax_depreciation_opening_balance_date"/>
            </search>
        </field>
    </record>

    <record id="tax_depreciation_category_form" model="ir.ui.view">
        <field name="name">tax.depreciation.category.form</field>
        <field name="model">tax.depreciation.category</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Compute Tax Deprecation"
                            name="compute_tax_deprecation_wizard"
                            type="object">
                    </button>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" default_focus="1" placeholder="Name"/>
                            <field name="percentage" />
                            <field name="tax_depreciation_opening_balance"/>
                            <field name="tax_depreciation_opening_balance_date"/>
                        </group>
                        <group>
                            <field name="account_asset_ids" widget="many2many_tags"/>
                            <field name="account_depreciation_ids"  widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Depreciation Details">
                            <field name="tax_depreciation_category_asset_computation_ids" readonly="1">
                                <list create="0" edit="0" delete="0">
                                    <field name="year"/>
                                    <field name="opening_balance"/>
                                    <field name="disposed_sold"/>
                                    <field name="purchased"/>
                                    <field name="amount"/>
                                    <field name="tax_depreciated_amount"/>
                                    <field name="remaining_amount"/>
                                    <field name="accounting_depreciation"/>
                                    <field name="depreciation_difference"/>
                                    <field name="deferred_tax_amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem id="menuitem_tax_depreciation_category"
              name="Tax Depreciation Categories"
              parent="account.account_invoicing_menu"
              action="tax_depreciation_category_action" sequence="1"/>
</odoo>
