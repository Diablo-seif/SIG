<odoo>
    <record id="tax_depreciation_entry_action" model="ir.actions.server">
        <field name="name">Create Journal Entries</field>
        <field name="model_id" ref="l10n_eg_tax_depreciation.model_tax_depreciation_category_asset_computation"/>
        <field name="binding_model_id" ref="l10n_eg_tax_depreciation.model_tax_depreciation_category_asset_computation"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = model.action_create_update_journal_entries()
        </field>
    </record>
    <record id="tax_depreciation_computation_action" model="ir.actions.act_window">
        <field name="name">Tax Depreciation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tax.depreciation.category.asset.computation</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>
    <record id="tax_depreciation_computation_tree" model="ir.ui.view">
        <field name="name">tax.depreciation.computation.tree</field>
        <field name="model">tax.depreciation.category.asset.computation</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0" >
                <field name="year"/>
                <field name="tax_depreciation_category_id"/>
                <field name="opening_balance"/>
                <field name="purchased"/>
                <field name="disposed_sold"/>
                <field name="amount"/>
                <field name="tax_depreciated_amount"/>
                <field name="remaining_amount"/>
                <field name="accounting_depreciation"/>
                <field name="depreciation_difference"/>
                <field name="deferred_tax_amount"/>
            </list>
        </field>
    </record>
    <record id="tax_depreciation_computation_form" model="ir.ui.view">
        <field name="name">tax.depreciation.computation.form</field>
        <field name="model">tax.depreciation.category.asset.computation</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="year"/>
                            <field name="tax_depreciation_category_id"/>
                            <field name="opening_balance" />
                            <field name="purchased" />
                            <field name="disposed_sold" />
                            <field name="amount" />
                        </group>
                        <group>
                            <field name="tax_depreciated_amount" />
                            <field name="remaining_amount" />
                            <field name="accounting_depreciation" />
                            <field name="depreciation_difference" />
                            <field name="deferred_tax_amount"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="tax_depreciation_computation_search_view" model="ir.ui.view">
        <field name="name">tax.depreciation.computation.search</field>
        <field name="model">tax.depreciation.category.asset.computation</field>
        <field name="arch" type="xml">
            <search>
                <field name="year"/>
                <filter string="Tax Category" name="Tax Category"
                        context="{'group_by':'tax_depreciation_category_id'}"/>
                <filter string="Year" name="Year"
                        context="{'group_by':'year'}"/>
            </search>
        </field>
    </record>
    <menuitem id="menuitem_tax_depreciation_computation"
              name="Tax Depreciation"
              parent="account.account_reports_management_menu"
              action="tax_depreciation_computation_action" sequence="1"/>
</odoo>
