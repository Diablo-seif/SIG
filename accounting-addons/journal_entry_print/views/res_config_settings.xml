<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">inherit.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="analytic" position="after">
                <h2>Journal Entry</h2>
                <div class="row mt16 o_settings_container" id="">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="journal_entry_signature"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="journal_entry_signature" string="Journal Entry Report Signature"/>
                            <div class="text-muted">
                                Add signature box at the end of journal entry report
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
