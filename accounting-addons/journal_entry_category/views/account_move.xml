<odoo>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">inherit.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="insertion_method" readonly="1"/>
            </field>
        </field>
    </record>

    <record id="view_account_move_filter" model="ir.ui.view">
        <field name="name">inherit.account.move.search</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="insertion_method"/>
            </field>
            <filter name="by_company" position="after">
                <filter string="Insertion Method" name="group_by_insertion_method" context="{'group_by':'insertion_method'}"/>
            </filter>
            <filter name="misc_filter" position="after">
                <separator/>
                <filter string="Automatic" name="filter_insertion_method" domain="[('insertion_method','=','automatic')]"/>
                <filter string="Manual" name="filter_insertion_method" domain="[('insertion_method','=','manual')]"/>
            </filter>
        </field>
    </record>
    <record id="account.action_move_journal_line" model="ir.actions.act_window">
        <field name="context">{'default_insertion_method': 'manual', 'default_move_type': 'entry', 'search_default_misc_filter':1, 'view_no_maturity': True}</field>
    </record>

</odoo>
