<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="approve_payment_request_line_form" model="ir.ui.view">
        <field name="name">payment.request.line.form</field>
        <field name="model">payment.request.line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="pay_type" required="1" widget="radio" options="{'horizontal': True}"/>
                        <label for="pay_amount" string="Amount"/>
                        <div class="o_row">
                            <field name="pay_amount"/>
                            <span class="oe_form_field"
                                  invisible="pay_type!='percentage'"
                            >Â %Â 
                            </span>

                        </div>

                    </group>
                </group>
                <footer>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="payment_request_line_form" model="ir.ui.view">
        <field name="name">payment.request.line.form</field>
        <field name="model">payment.request.line</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="partner_id"/>
                        </h1>
                        <group class="o_label_nowrap">
                            <group>
                                <field name="total_due" force_save="1" readonly="1" sum="Total Due"/>
                                <field name="total_payment_request" readonly="state !=draft"
                                       sum="Total Payment Request"/>
                                <!--                                    attrs="{'readonly':[('state','!=','draft')]}"-->
                                <field name="approved_payment_amount" readonly="1 or state != 'waiting'"
                                       sum="Approved Payment Amount"/>
                                <field name="approve_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="last_request_amount" force_save="1" readonly="1"/>
                                <field name="last_request_date" force_save="1" readonly="1"/>
                                <field name="last_payment_amount" force_save="1" readonly="1"/>
                                <field name="last_payment_date" force_save="1" readonly="1"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                    </div>
                </sheet>
                <chatter/>
                <!--<div class="oe_chatter">-->
                <!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
                <!--                    <field name="activity_ids" widget="mail_activity"/>-->
                <!--                    <field name="message_ids" widget="mail_thread"/>-->
                <!--                </div>-->
            </form>
        </field>
    </record>

    <record id="payment_request_line_tree" model="ir.ui.view">
        <field name="name">payment.request.line.tree</field>
        <field name="model">payment.request.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="partner_id"/>
                <field name="total_due"/>
                <field name="total_payment_request"/>
                <field name="approved_payment_amount"/>
                <field name="approve_date"/>
                <field name="last_request_amount"/>
                <field name="last_request_date"/>
                <field name="currency_id" invisible="1"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="payment_request_line_action" model="ir.actions.act_window">
        <field name="name">Payment Request Line</field>
        <field name="res_model">payment.request.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{create': 0, 'edit': 0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>

</odoo>
