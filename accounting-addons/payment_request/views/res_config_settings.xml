<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_res_config_settings_form" model="ir.ui.view">
        <field name="name">inherit.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_account_sepa_direct_debit']/parent::div/parent::div" position="after">
                <div class="col-lg-6 col-12 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="payment_request_responsible_id" string="Payment Request Responsible"/> <br/>
                        <field name="payment_request_responsible_id"/>
                        <div class="text-muted">
                            User that will receive activity with submitted payment request.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
