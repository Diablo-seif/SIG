<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_request_form" model="ir.ui.view">
        <field name="name">payment.request.form</field>
        <field name="model">payment.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Submit" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_approve_all" string="Approve All" type="object" class="oe_highlight"
                            invisible=" state != 'submitted' or not line_ids"

                    />
                    <!--                            attrs="{'invisible':['|', ('state','!=','submitted'),('line_ids','=',[])]}"-->

                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group class="o_label_nowrap">
                            <field name="currency_id"
                                   readonly="state !=draft"
                                   groups="base.group_multi_currency"
                            />
                            <!--                                    attrs="{'readonly':[('state','!=','draft')]}"-->

                            <field name="user_id" invisible="1"/>
                            <label for="available_amount" string="Available Amount"/>
                            <div class="o_row">
                                <span>
                                    <button name="update_available_amount" type="object" icon="fa-refresh"/>
                                </span>
                                <field name="available_amount" readonly="1"/>
                            </div>

                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="payment_lines" string="Payment Lines">
                            <field name="line_ids" context="{'default_currency_id':currency_id}">
                                <list editable="bottom">
                                    <field name="partner_id" readonly="state !=draft"/>
                                    <!--                                    attrs="{'readonly':[('state','!=','draft')]}"-->
                                    <field name="total_due" force_save="1" readonly="1"/>
                                    <field name="total_payment_request" readonly="state !=draft"/>
                                    <!--                                    attrs="{'readonly':[('state','!=','draft')]}"-->
                                    <field name="approved_payment_amount" readonly="1 or state','!=','waiting'"
                                    />
                                    <!--                                           attrs="{'readonly':[('state','!=','waiting')]}"-->
                                    <field name="approve_date" readonly="1"/>
                                    <field name="last_request_amount" optional="show" force_save="1" readonly="1"/>
                                    <field name="last_request_date" optional="show" force_save="1" readonly="1"/>
                                    <field name="last_payment_amount" optional="show" force_save="1" readonly="1"/>
                                    <field name="last_payment_date" optional="show" force_save="1" readonly="1"/>
                                    <field name="state" readonly="1"/>
                                    <field name="currency_id" optional="hide" readonly="1" force_save="1"/>
                                    <field name="move_ids" optional="hide" readonly="1" force_save="1"
                                           widget="many2many_tags"/>
                                    <button name="action_view_account_move" type="object"
                                            context="{'search_default_id': move_ids}"
                                            icon="fa-pencil-square-o"/>
                                    <button name="approve_payment_request_line" type="object"
                                            icon="fa-check text-success"
                                            invisible=" state != 'waiting'"/>
                                    <!--                                            attrs="{'invisible':[('state','!=','waiting')]}"/>-->
                                    <button name="action_reject" type="object"
                                            icon="fa-ban text-danger"
                                            invisible=" state != 'waiting'"/>
                                    <!--                                            attrs="{'invisible':[('state','!=','waiting')]}"/>-->
                                </list>
                                <form>
                                    <header>
                                        <field name="state" widget="statusbar"/>
                                    </header>
                                    <div class="oe_title">
                                        <h1>
                                            <field name="partner_id"/>
                                        </h1>
                                        <group class="o_label_nowrap">
                                            <group>
                                                <field name="total_due" force_save="1" readonly="1"/>
                                                <field name="total_payment_request" readonly="state !=draft"/>
                                                <!--                                    attrs="{'readonly':[('state','!=','draft')]}"-->
                                                <field name="approved_payment_amount" readonly="1 or state!=waiting"
                                                />
                                                <!--                                                        attrs="{'readonly':[('state','!=','waiting')]}"-->
                                                <field name="approve_date" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="last_request_amount" force_save="1" readonly="1"/>
                                                <field name="last_request_date" force_save="1" readonly="1"/>
                                                <field name="last_payment_amount" force_save="1" readonly="1"/>
                                                <field name="last_payment_date" force_save="1" readonly="1"/>
                                                <field name="currency_id" invisible="1"/>
                                            </group>
                                        </group>
                                    </div>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <group class="oe_subtotal_footer">
                        <field name="total_amount"/>
                        <field name="total_approved" class="oe_subtotal_footer_separator"/>
                        <field name="total_due" class="oe_subtotal_footer_separator"/>
                    </group>
                </sheet>
<!--                <chatter/>-->
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids" widget="mail_followers"/>-->
<!--                    <field name="activity_ids" widget="mail_activity"/>-->
<!--                    <field name="message_ids" widget="mail_thread"/>-->
<!--                </div>-->
            </form>
        </field>
    </record>

    <record id="payment_request_tree" model="ir.ui.view">
        <field name="name">payment.request.tree</field>
        <field name="model">payment.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="total_due"/>
                <field name="total_amount"/>
                <field name="total_approved"/>
                <field name="currency_id" groups="base.group_multi_currency" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="payment_request_action" model="ir.actions.act_window">
        <field name="name">Payment Requests</field>
        <field name="res_model">payment.request</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>

    <menuitem id="payment_request_menu"
              name="Payment Requests"
              action="payment_request_action"
              parent="account.menu_finance_payables"
              sequence="50"/>

</odoo>
