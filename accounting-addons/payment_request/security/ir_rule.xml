<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_request_multi_company_rule" model="ir.rule">
        <field name="name">Payment Request multi-company</field>
        <field name="model_id" ref="model_payment_request"/>
        <field name="domain_force">['|',('company_id', 'in', company_ids),('company_id','=',False)]</field>
    </record>

    <record id="payment_request_line_multi_company_rule" model="ir.rule">
        <field name="name">Payment Request Line multi-company</field>
        <field name="model_id" ref="model_payment_request_line"/>
        <field name="domain_force">['|',('payment_request_id.company_id', 'in', company_ids),('payment_request_id.company_id','=',False)]</field>
    </record>

</odoo>
