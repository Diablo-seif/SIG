<odoo>
    <record id="account.action_tax_form" model="ir.actions.act_window">
        <field name="context">{'search_default_sale': True,
            'default_tax_type': 'tax', 'search_default_purchase': True,
            'active_test': False}
        </field>
        <field name="domain">[('tax_type', '=', 'tax')]</field>
    </record>

    <record id="view_tax_withholding_form" model="ir.ui.view">
        <field name="name">inherit.account.tax.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <field name="type_tax_use" position="after">
                <field name="type_tax_deduction"
                       invisible="tax_type=tax"
                       required="tax_type=tax_withholding"/>
            </field>
<!--                       attrs="{'invisible': [('tax_type', '=', 'tax')], 'required': [('tax_type', '=', 'tax_withholding')]}"/>-->

            <field name="type_tax_use" position="attributes">
                <attribute name="attrs">
                    {'invisible': [('tax_type', '=', 'tax_withholding')]}
                </attribute>
            </field>
            <xpath expr="//field[@name='amount']/.." position="after">
                <field name="tax_type" invisible="1"/>
                <field name="deduction_code"
                       invisible="tax_type=tax"/>
            </xpath>
<!--                       attrs="{'invisible': [('tax_type', '=', 'tax')]}"/>-->
        </field>
    </record>

     <record id="view_account_tax_withholding_search" model="ir.ui.view">
            <field name="name">account.tax.search</field>
            <field name="model">account.tax</field>
            <field name="arch" type="xml">
                <search string="Search Taxes">
                    <field name="name" filter_domain="['|', ('name','ilike',self), ('description','ilike',self)]" string="Tax"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <filter string="Withholding" name="withholding" domain="[('type_tax_deduction','=','withholding')]" />
                    <filter string="Deduction" name="deduction" domain="[('type_tax_deduction','=','deduction')]" />
                    <separator/>
                    <filter name="active" string="Active" domain="[('active','=',True)]" help="Show active taxes"/>
                    <filter name="archived" string="Archived" domain="[('active','=',False)]" help="Show inactive taxes"/>
                    <group string="Group By">
                        <filter string="Company" name="company" domain="[]" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                        <filter string="Tax Application" name="group_by_type_tax_deduction" domain="[]" context="{'group_by':'type_tax_deduction'}"/>
                    </group>
                </search>
            </field>
        </record>

    <record id="view_tax_withholding_tree" model="ir.ui.view">
        <field name="name">account.tax.tree</field>
        <field name="model">account.tax</field>
        <field name="arch" type="xml">
            <list decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="type_tax_deduction"/>
                <field name="description"/>
                <field name="company_id" options="{'no_create': True}"
                       groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_tax_withholding_action" model="ir.actions.act_window">
        <field name="name">Deduction/Withholding Tax</field>
        <field name="res_model">account.tax</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('tax_type', '=', 'tax_withholding')]</field>
        <field name="context">{'search_default_sale': True,
            'default_tax_type': 'tax_withholding',
            'default_type_tax_use': 'none',
            'search_default_purchase': True, 'active_test': False}
        </field>
        <field name="view_id" ref="view_tax_withholding_tree"/>
        <field name="search_view_id" ref="view_account_tax_withholding_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Deduction/Withholding Tax
            </p>
        </field>
    </record>

    <menuitem action="view_tax_withholding_action" id="menuitem_tax_withholding"
              parent="account.account_invoicing_menu" sequence="2"/>
</odoo>
