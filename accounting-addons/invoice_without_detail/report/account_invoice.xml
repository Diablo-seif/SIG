<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document_without_detail"
              inherit_id="account.report_invoice_document" primary="True">
        <xpath expr="//table[@name='invoice_line_table']" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>
    </template>

    <template id="report_invoice_document_with_payments_without_detail">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                <t t-set="print_with_payments" t-value="True"/>
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                    t-call="invoice_without_detail.report_invoice_document_without_detail" t-lang="lang"/>
            </t>
        </t>
    </template>

    <template id="report_invoice_without_detail">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="invoice_without_detail.report_invoice_document_without_detail"
                   t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="report_invoice_with_payments_without_detail">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="invoice_without_detail.report_invoice_document_with_payments_without_detail"
                   t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
