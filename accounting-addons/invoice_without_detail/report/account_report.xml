<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <report
            id="account_invoices_without_detail"
            model="account.move"
            string="Invoices Without Details"
            report_type="qweb-pdf"
            name="invoice_without_detail.report_invoice_with_payments_without_detail"
            file="invoice_without_detail.report_invoice_with_payments_without_detail"
            attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
            groups="account.group_account_invoice"
    />

    <report
            id="account_invoices_without_payment_without_detail"
            model="account.move"
            string="Invoices Without Payment And Details"
            report_type="qweb-pdf"
            name="invoice_without_detail.report_invoice_without_detail"
            file="invoice_without_detail.report_invoice_without_detail"
            attachment="(object.state in ('open','paid')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
            print_report_name="(object._get_report_base_filename())"
    />

</odoo>
