<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_tax_group_purchase_vat"
            model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.tax.group.purchase.vat
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="taxcloud_settings" position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                     id="tax_purchase_vat_settings">
                    <div class="o_setting_right_pane"
                         name="tax_purchase_vat_right_pane">
                        <span class="o_form_label">Tax Purchase VAT Settings
                        </span>
                        <div class="text-muted">
                        </div>
                        <div>
                            <label for="tax_group_purchase_vat_id"
                                   string="Tax Group Purchase VAT"/>
                            <field name="tax_group_purchase_vat_id"/>
                        </div>
                        <div>
                            <label for="fixed_assets_vat_id"
                                   string="Fixed Assets Account"/>
                            <field name="fixed_assets_vat_id"/>
                        </div>
                        <div>
                            <label for="cost_of_goods_sold_vat_id"
                                   string="Cost Of Goods Sold Account"/>
                            <field name="cost_of_goods_sold_vat_id"/>
                        </div>
                        <div>
                            <label for="expense_invest_vat_id"
                                   string="Expense Invest Account"/>
                            <field name="expense_invest_vat_id"/>
                        </div>
                        <div>
                            <label for="expense_vat_id"
                                   string="Expense Account"/>
                            <field name="expense_vat_id"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>

</odoo>
