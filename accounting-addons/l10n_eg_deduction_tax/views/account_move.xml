<odoo>

    <record id="account_move_form_view" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <button name="open_reconcile_view" position="after">
                <field name="deduction_payment_ids" invisible="1"/>
                <button type="object" name="action_view_payments"
                        class="oe_link" string="View Payments"
                        colspan="2" icon="fa-bars"
                        groups="account.group_account_invoice"/>
            </button>
             <field name="invoice_filter_type_domain" position="after">
                  <field name="invoice_filter_type_ded_domain" invisible="1"/>
             </field>
            <xpath expr="//button[@name='action_register_payment']"
                   position="after">
                <button name="action_invoice_register_deduct" type="object"
                        class="oe_highlight"
                        string="Register Deduction Tax"
                        groups="account.group_account_invoice"
                        invisible=" state != posted or
                        deduction_tax_residual_amount = 0 or
                        move_type not in ['in_invoice', 'in_refund']) or
                        payment_state = paid"/>
<!--                        attrs="{'invisible': ['|','|','|',('state', '!=', 'posted'),-->
<!--                        ('deduction_tax_residual_amount','=',0),-->
<!--                        ('move_type','not in',['in_invoice', 'in_refund']),-->
<!--                        ('payment_state','=','paid')]}"/>-->

                <button name="action_invoice_register_deduct" type="object"
                        class="oe_highlight"
                        string="Register Withholding Tax"
                        groups="account.group_account_invoice"
                        invisible="state != posted or
                        deduction_tax_residual_amount = 0  or
                        payment_state = paid or
                        move_type not in ['out_invoice', 'out_refund']"
                />
<!--                        attrs="{'invisible': ['|','|','|',('state', '!=', 'posted'),-->
<!--                        ('deduction_tax_residual_amount','=',0),-->
<!--                        ('payment_state','=','paid'),-->
<!--                        ('move_type','not in',['out_invoice', 'out_refund'])]}"-->
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='tax_ids']"
                   position="after">
                <field name="deduction_tax_id" options="{'no_quick_create': True, 'no_create_edit' : True}"
                       domain="[('type_tax_use', '=', 'none'),
                                ('type_tax_deduction', '=?', parent.invoice_filter_type_ded_domain),
                                ('company_id', '=', parent.company_id)]"
                       optional="show"/>
                <field name="deduction_tax_percent" invisible="1"/>
                <field name="deduction_tax_amount" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/list/field[@name='account_id']"
                   position="after">
                <field name="deduction_tax_id" invisible="1"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Tax Allowance" name="deduction_tax"
                      invisible="move_type=entry"
                >
                    <field name="deduction_tax_line_ids" nolabel="1">
                        <list create="0" edit="0" delete="0">
                            <field name="deduction_tax_id"/>
                            <field name="base_amount"/>
                            <field name="total_amount"/>
                            <field name="tax_amount"/>
                            <field name="tax_amount_in_company_currency"
                                   groups="base.group_multi_currency"/>
                            <field name="paid_amount"/>
                            <field name="residual_amount"/>
                            <field name="paid_percentage"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_currency_id" invisible="1"/>
                        </list>
                    </field>
                    <group>
                        <field name="deduction_tax_total_amount" readonly="1"
                               string="Total Allowance amount"/>
                        <field name="deduction_tax_residual_amount"
                               string="residual amount"
                               readonly="1"/>
                    </group>
                </page>

            </xpath>
        </field>
    </record>
    <record id="invoice_register_deduct_server_action"
            model="ir.actions.server">
        <field name="name">Register Deduction Tax</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = model.action_invoice_register_deduct()
        </field>
    </record>

</odoo>
