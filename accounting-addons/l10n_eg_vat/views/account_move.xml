<odoo>

    <record id="account_move_form_view" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="supplier_invoice_number" required="1"
                       invisible="move_type = out_invoice or move_type = out_refund"/>
<!--                       attrs="{'invisible':['|', ('move_type','=','out_invoice'), ('move_type','=','out_refund')]}"/>-->
            </xpath>
            <xpath expr="//field[@name='invoice_payment_term_id']/.."
                   position="after">
                <field name="tax_adjustment"
                              invisible="move_type=entry"
                        />
<!--                       attrs="{'invisible':[('move_type','=','entry')]}"/>-->
                <field name="tax_reported"
                              invisible="move_type == entry or  state == 'draft' "
                />
<!--                       attrs="{'invisible':['|',('move_type','=','entry'),('state','=','draft')]}"-->
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='tax_ids']"
                   position="after">
                <field name="account_vat_tax_types_domain_vat"  invisible="1"/>
                <field name="account_vat_tax_types_domain_table"  invisible="1"/>
                <field name="account_vat_tax_invoice_domain"  invisible="1"/>
                <field name="account_vat_tax_types_ids" widget="many2many_tags"
                       domain="[('invoice_type','=',account_vat_tax_invoice_domain),
                '|', ('tax_type','=',account_vat_tax_types_domain_vat),('tax_type','=',account_vat_tax_types_domain_table)]" />
            </xpath>
            <xpath expr="//field[@name='line_ids']/list/field[@name='tax_tag_ids']"
                   position="after">
                <field name="account_vat_tax_types_domain_vat"  invisible="1"/>
                <field name="account_vat_tax_types_domain_table"  invisible="1"/>
                <field name="account_vat_tax_invoice_domain"  invisible="1"/>
                <field name="account_vat_tax_types_ids" domain="[('invoice_type','=',account_vat_tax_invoice_domain),
                '|', ('tax_type','=',account_vat_tax_types_domain_vat),('tax_type','=',account_vat_tax_types_domain_table)]" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter_inherit" model="ir.ui.view">
        <field name="name">	account.invoice.select</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <filter name="duedate" position="after">
                <separator/>
                <filter string="Tax Adjustment" name="tax_adjustment"
                        domain="[('tax_adjustment','=',True)]"/>
                <filter string="Tax Reported" name="tax_reported"
                        domain="[('tax_reported','=',True)]"/>
                <filter string="Tax Not Reported" name="tax_not_reported"
                        domain="[('tax_reported','=',False)]"/>
            </filter>
        </field>
    </record>

</odoo>
