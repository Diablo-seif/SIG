<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_vat" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.vat
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name="l10n_eu_service_right_pane" position="after">
                <div class="o_setting_left_pane"/>
                <div class="o_setting_right_pane">
                    <br></br>
                    <br></br>
                    <span class="o_form_label">VAT Warning Email</span>
                    <span class="fa fa-lg"/>
                    <div class="text-muted">
                        VAT Report Check Warning Email Day
                    </div>
                    <div class="content-group" title="VAT Warning Email Day">
                        <div class="row mt16">
                            <div class="col-12">
                              <label for="vat_warning_day" string="VAT Warning Email DAY" class="o_light_label"/>
                              <field class="col-2" name="vat_warning_day"/>.
                            </div>
                            <div class="col-12">
                                <label for="vat_email_interval_number" class="o_light_label"/>
                                <field name="vat_email_interval_number" class="col-2"/>
                                <field name="vat_email_interval_type" class="oe_inline"/>
                            </div>
                            <div class="col-12">
                                <label for="module_l10n_eg_tax_included_in_price"/>
                                <field name="module_l10n_eg_tax_included_in_price"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
