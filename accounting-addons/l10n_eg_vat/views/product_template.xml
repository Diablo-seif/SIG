<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="taxes_id" position="after">
                <field name="account_vat_tax_types_out_domain_vat"  invisible="1"/>
                <field name="account_vat_tax_types_out_domain_table"  invisible="1"/>
                <field name="account_vat_tax_types_out_ids" widget="many2many_tags"
                       domain="['&amp;',('invoice_type','=','out'),
                       '|',('tax_type','=',account_vat_tax_types_out_domain_vat),('tax_type','=',account_vat_tax_types_out_domain_table)]"/>
            </field>
            <field name="supplier_taxes_id" position="after">
                <field name="account_vat_tax_types_in_domain_vat"  invisible="1"/>
                <field name="account_vat_tax_types_in_domain_table"  invisible="1"/>
                <field name="account_vat_tax_types_in_ids" widget="many2many_tags"
                       domain="['&amp;',('invoice_type','=','in'),
                       '|',('tax_type','=',account_vat_tax_types_in_domain_vat),('tax_type','=',account_vat_tax_types_in_domain_table)]"/>
            </field>
        </field>
    </record>
</odoo>
