<odoo>
    <record id="vat_sales_report_grouped_monthly_action" model="ir.actions.act_window">
        <field name="name">VAT Tax Report Grouped Monthly</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vat.monthly.report</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <record id="vat_sales_report_grouped_monthly_tree" model="ir.ui.view">
        <field name="name">vat.sales.report.grouped.monthly.tree</field>
        <field name="model">vat.monthly.report</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="year"/>
                <field name="month" optional="show"/>
                <field name="user_id" optional="show"/>
                <field name="report_date" optional="show"/>
                <field name="total_amount" optional="show"/>
            </list>
        </field>
    </record>
    <record id="vat_monthly_report_view_form" model="ir.ui.view">
        <field name="name">VAT Monthly Report</field>
        <field name="model">vat.monthly.report</field>
        <field name="arch" type="xml">
            <form string="VAT Monthly Report" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="year" />
                            <field name="month"/>
                            <field name="report_date"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="sales_total_amount"/>
                            <field name="purchase_total_amount"/>
                            <field name="total_amount"/>
                        </group>
                    </group>
                    <notebook colspan="4">
                        <page string="Report Details">
                                <field name="monthly_line_ids"
                                       nolabel="1" options="{'no_create':1, 'no_edit':1}">
                                    <list>
                                       <field name="document_type"/>
                                        <field name="tax_type" />
                                        <field name="table_product_type" />
                                        <field name="invoice_no" />
                                        <field name="partner_name" />
                                        <field name="registration_number" />
                                        <field name="file_number" />
                                        <field name="partner_address" />
                                        <field name="national_no" />
                                        <field name="partner_mobile" />
                                        <field name="invoice_date" />
                                        <field name="product_name" />
                                        <field name="product_code" />
                                        <field name="product_type" />
                                        <field name="product_kind" />
                                        <field name="product_uom" />
                                        <field name="price_unit" />
                                        <field name="tax_percentage" />
                                        <field name="quantity" />
                                        <field name="price_subtotal" />
                                        <field name="tax_amount" />
                                        <field name="price_total" />
                                        <field name="total_tax_with_sign"
                                               sum="VAT Amount"/>
                                    </list>
                                </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="vat_monthly_report_grouped_search_view" model="ir.ui.view">
        <field name="name">vat.sales.report.grouped.search</field>
        <field name="model">vat.monthly.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="year"/>
                <field name="month" />
                <field name="user_id" />
                <separator orientation="vertical"/>
                <group expand="1" string="Group By">
                    <filter string="Year" name="year"
                            context="{'group_by':'year'}"/>
                </group>
            </search>
        </field>
    </record>

    <menuitem id="menuitem_vat_sales_report_grouped_monthly"
              name="VAT Tax Report Grouped Monthly "
              parent="account.account_reports_management_menu"
              action="vat_sales_report_grouped_monthly_action" sequence="1"/>

</odoo>
