<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="salary_adjustment_form" model="ir.ui.view">
        <field name="name">salary.adjustment.form</field>
        <field name="model">salary.adjustment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="department_ids"
                                   widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                            <field name="employee_ids" widget="many2many_tags"/>
                            <field name="detailed"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="%(hr_salary_adjustment.salary_adjustment_server_action)d"
                            string="Print Pdf" type="action"
                            class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="salary_adjustment_action" model="ir.actions.act_window">
        <field name="name">Salary Adjustment</field>
        <field name="res_model">salary.adjustment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="salary_adjustment_menu"
              name="Salary Adjustment"
              action="salary_adjustment_action"
              parent="hr_payroll.menu_hr_payroll_report"/>

</odoo>
