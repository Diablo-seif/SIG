<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_a3" model="report.paperformat">
        <field name="name">Salary Adjustment A3</field>
        <field name="default" eval="True"/>
        <field name="format">A3</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <record id="salary_adjustment_report" model="ir.actions.report">
        <field name="name">Salary Adjustment</field>
        <field name="model">salary.adjustment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_salary_adjustment.salary_adjustment_template</field>
        <field name="report_file">hr_salary_adjustment.salary_adjustment_template</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref="model_salary_adjustment"/>
        <field name="paperformat_id" ref="paperformat_a3"/>
    </record>

</odoo>
