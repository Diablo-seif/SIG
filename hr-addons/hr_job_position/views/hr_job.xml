<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_hr_job_form" model="ir.ui.view">
        <field name="name">inherit.hr.job.form</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="before">
                <field name="job_level_id" options="{'no_open': True, 'no_create': True}"/>
                <field name="contract_type_id"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_hr_job_tree" model="ir.ui.view">
        <field name="name">inherit.hr.job.tree</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="job_level_id" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='no_of_hired_employee']" position="after">
                <field name="contract_type_id" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
