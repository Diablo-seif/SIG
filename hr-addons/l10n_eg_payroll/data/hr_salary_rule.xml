<odoo noupdate="1">

        <record id="social_insurance_employee_share_salary_rule" model="hr.salary.rule">
            <field name="name">Social Insurance Employee Share</field>
            <field name="sequence">90</field>
            <field name="code">SIES</field>
            <field name="category_id" ref="social_insurance_salary_category"/>
            <field name="struct_id" ref="full_time_salary_structure"/>
            <field name="condition_select">python</field>
            <field name="condition_python">
result = employee.insurance_employee_share > 0
            </field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
try:
    result= employee.insurance_employee_share
except:
    result=0
            </field>
        </record>

