<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_calendar_event_form_inherit" model="ir.ui.view">
        <field name="name">calendar.event.form.inherit</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='allday']" position="after">
                <field name="auto_create_leave" string="External Meeting"
                       invisible="allday = True"/>
<!--                       attrs="{'invisible': [('allday', '=', True)]}"/>-->
            </xpath>
            <xpath expr="//field[@name='attendee_ids']/list//field[@name='email']" position="after">
                <field name="leave_id"/>
            </xpath>
        </field>
    </record>

</odoo>
