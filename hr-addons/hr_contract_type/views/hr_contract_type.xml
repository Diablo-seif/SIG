<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_contract_type_form" model="ir.ui.view">
        <field name="name">hr.contract.type.form</field>
        <field name="model">hr.contract.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name"/></h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_contract_type_tree" model="ir.ui.view">
        <field name="name">hr.contract.type.tree</field>
        <field name="model">hr.contract.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="hr_contract_type_action" model="ir.actions.act_window">
        <field name="name">Contract Type</field>
        <field name="res_model">hr.contract.type</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="hr_contract_type_menu" 
              name="Contract Type" 
              action="hr_contract_type_action" 
              parent="hr.menu_human_resources_configuration"
              sequence="1"/>

</odoo>
