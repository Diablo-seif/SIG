<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="hr_course_type_view_tree" model="ir.ui.view">
        <field name="name">Course Type</field>
        <field name="model">hr.course.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="hr_course_type_view_form" model="ir.ui.view">
        <field name="name">Course Type</field>
        <field name="model">hr.course.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_course_type_action" model="ir.actions.act_window">
        <field name="name">Course Types</field>
        <field name="res_model">hr.course.type</field>
        <field name="view_mode">list,form</field>
        <field name="target">main</field>
    </record>
    
    <menuitem id="hr_course_type_menu"
        name="Course Types"
        parent="hr.menu_human_resources_configuration"
        groups="hr.group_hr_manager"
        sequence="5"
        action="hr_course_type_action"/>

</odoo>
