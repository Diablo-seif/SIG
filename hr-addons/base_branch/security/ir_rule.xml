<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_branch_multi_company_rule" model="ir.rule">
        <field name="name">Branch all users multi-company</field>
        <field name="model_id" ref="model_res_branch"/>
        <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
    </record>

    <record id="res_branch_partner_manager_multi_company_rule" model="ir.rule">
        <field name="name">Branch partner manager multi-company</field>
        <field name="model_id" ref="model_res_branch"/>
        <field name="groups" eval="[(6, 0, [ref('base.group_partner_manager')])]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

</odoo>
