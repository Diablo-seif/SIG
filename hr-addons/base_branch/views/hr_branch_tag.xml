<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_branch_tag_form" model="ir.ui.view">
        <field name="name">res.branch.tag.form</field>
        <field name="model">res.branch.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_branch_tag_tree" model="ir.ui.view">
        <field name="name">res.branch.tag.tree</field>
        <field name="model">res.branch.tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="res_branch_tag_action" model="ir.actions.act_window">
        <field name="name">Branch Tags</field>
        <field name="res_model">res.branch.tag</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>

    <menuitem id="res_branch_tag_menu"
              name="Branch Tags"
              action="res_branch_tag_action"
              parent="base.menu_users"
              sequence="101"/>
</odoo>
