<odoo>
    <record id="inherit_res_partner_form" model="ir.ui.view">
        <field name="name">inherit.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="is_secret" position="after">
                <field name="is_vip" groups="sig_applicant.group_access_vip_partner"/>
            </field>
        </field>
    </record>

    <record id="vip_partners_action" model="ir.actions.act_window">
        <field name="name">VIP Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_is_vip': '1'}</field>
        <field name="domain">[('is_vip', '=', True)]</field>
    </record>
</odoo>
