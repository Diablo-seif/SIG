<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_dynamic_service_stage_form" model="ir.ui.view">
        <field name="name">hr.dynamic.service.stage.form</field>
        <field name="model">hr.dynamic.service.stage</field>
        <field name="arch" type="xml">
            <form string="service Stage" create="false" duplicate="false"
                  edit="false" delete="false">
                <sheet>
                    <group>
                        <field name="sequence"
                               invisible="stage_for_refused = True"/>
                        <!--                               attrs="{'invisible': [('stage_for_refused', '=', True)]}" />-->
                        <field name="name" invisible="stage_for_refused = True"/>
<!--                               attrs="{'invisible': [('stage_for_refused', '=', True)]}"/>-->
                        <field name="action_name" invisible="stage_for_refused = True"/>
                        <!--                               attrs="{'invisible': [('stage_for_refused', '=', True)]}" />-->
                        <field name="can_edit"/>
                        <field name="can_refuse" invisible="stage_for_refused = True"/>
                        <!--                               attrs="{'invisible': [('stage_for_refused', '=', True)]}" />-->
                        <field name="use_domain"/>
                        <field name="domain" widget="domain"
                               options="{'model': 'hr.employee'}"
                               invisible="use_domain = True or use_domain = True"/>
<!--                        attrs="{'invisible': [('use_domain', '=', False)], 'required': [('use_domain', '=', True)]}"/>-->
                        <field name="group_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>

                        <field name="user_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
                        <field name="his_direct_manager"/>
                        <field name="his_department_head"/>
                        <field name="this_employee"/>
                        <field name="server_action_id" options="{'no_create_edit': True}"/>
                        <field name="service_type_id" readonly="1"/>
                        <field name="stage_for_refused" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
