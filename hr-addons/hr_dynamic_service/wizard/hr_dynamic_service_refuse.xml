<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_dynamic_service_refuse_form" model="ir.ui.view">
        <field name="name">hr.dynamic.service.refuse.form</field>
        <field name="model">hr.dynamic.service.refuse</field>
        <field name="arch" type="xml">
            <form string="Dynamic Approval Refuse">
                <sheet>
                    <group>
                        <field name="refuse_reason"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_refuse" string="Refuse" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_hr_dynamic_service_refuse_action" model="ir.actions.act_window">
        <field name="name">Dynamic Approval Refuse</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.dynamic.service.refuse</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
