<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="loan_hr_employee_form" model="ir.ui.view">
        <field name="name">loan.hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_loans" type="object" groups="hr.group_hr_user"
                        class="oe_stat_button" icon="fa-pencil-square-o">
                    <field name="loan_count" string="Loans" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>
