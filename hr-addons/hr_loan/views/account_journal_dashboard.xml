<odoo>

    <record id="account_journal_dashboard_kanban_view_inherit_hr_loan" model="ir.ui.view">
        <field name="name">account.journal.dashboard.kanban</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//t[@t-name='JournalMiscelaneous']//div[hasclass('o_kanban_primary_right')]" position="inside">
                <div class="row">
                    <div class="col overflow-hidden text-left">
                        <a type="object" t-if="journal_type == 'general' and dashboard.number_loans_to_pay" name="open_loans_action">
                            <t t-esc="dashboard.number_loans_to_pay"/> Loans to Process
                        </a>
                    </div>
                    <div class="col-auto text-right">
                        <span t-if="journal_type == 'general' and dashboard.number_loans_to_pay"><t t-esc="dashboard.sum_loans_to_pay"/></span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
