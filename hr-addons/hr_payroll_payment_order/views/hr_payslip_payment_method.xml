<odoo>
    <record id="hr_payslip_payment_method_tree" model="ir.ui.view">
        <field name="name">hr.payslip.payment.method.tree</field>
        <field name="model">hr.payslip.payment.method</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="name"/>
                <field name="company_id" groups="base.group_multi_company"
                       options="{'no_create': True}"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="hr_payslip_payment_method_action" model="ir.actions.act_window">
        <field name="name">Payment Method</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.payslip.payment.method</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="hr_payslip_payment_method_categ_menu"
              name="Payment"
              parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
              groups="hr_payroll.group_hr_payroll_manager"
              sequence="100"/>
    <menuitem id="hr_payslip_payment_method_menu"
              name="Payment Method"
              parent="hr_payslip_payment_method_categ_menu"
              action="hr_payslip_payment_method_action"
              sequence="10"/>

</odoo>
