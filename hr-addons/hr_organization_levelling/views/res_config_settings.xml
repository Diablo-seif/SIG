<!--<?xml version="1.0" encoding="utf-8"?>-->
<odoo>

    <record id="res_config_settings_organization_levelling_form" model="ir.ui.view">
        <field name="name">res.config.settings.organization.levelling.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]/div[2]" position="inside">
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box"
                         title="This Configuration to ensure that organization levels wont exceed the selected level">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row">
                                    <label string="Organization Levelling"
                                           for="organization_levelling"
                                           class="col-md-3 o_light_label"/>
                                    <field name="organization_levelling"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
