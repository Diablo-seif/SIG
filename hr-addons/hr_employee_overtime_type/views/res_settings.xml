<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_res_config_settings_form_view"
            model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="aspl_hr_overtime_ee.inherit_res_config_settings_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='ot_time_difference_limit']/../../.." position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="overtime_type" string="Overtime Type"/>
                        <div class="text-muted">Select the Overtime Type here..</div>
                        <div class="text-muted">
                            <field name="overtime_type"/>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box"
                     invisible="overtime_type = 'base_on_salary'">
                    <div class="o_setting_right_pane">
                        <label for="compensatory_percent"/>
                        <span class="fa fa-lg"
                              title="Set the Compensatory Percent here.."/>
                        <div class="row">
                            <div class="text-muted col-md-8">
                                Set the Compensatory Percent here..
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <div class="address_format" readonly="1">
                                    <field name="compensatory_percent" style="width: 15%"/>
                                    %
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box"
                     invisible="overtime_type = 'base_on_salary'">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="overtime_leave_type_id" string="Overtime Leave Type"/>
                        <div class="text-muted">Select the Overtime Leave Type here..</div>
                        <div class="text-muted">
                            <field name="overtime_leave_type_id"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
