<odoo>

    <record id="hr_performance_template_multi_company_rule" model="ir.rule">
        <field name="name">HR Performance Template: Multi Company Rule</field>
        <field name="model_id" ref="model_hr_performance_template"/>
        <field name="domain_force"> ['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
    </record>

    <record id="hr_performance_score_scale_multi_company_rule" model="ir.rule">
        <field name="name">HR Performance Score Scale: Multi Company Rule</field>
        <field name="model_id" ref="model_hr_performance_score_scale"/>
        <field name="domain_force"> ['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
    </record>

    <record id="hr_evaluation_period_multi_company_rule" model="ir.rule">
        <field name="name">HR Evaluation Period: Multi Company Rule</field>
        <field name="model_id" ref="model_hr_evaluation_period"/>
        <field name="domain_force"> ['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
    </record>

    <record id="hr_evaluation_multi_company_rule" model="ir.rule">
        <field name="name">HR Evaluation: Multi Company Rule</field>
        <field name="model_id" ref="model_hr_evaluation"/>
        <field name="domain_force"> ['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
    </record>

    <record id="hr_evaluation_my_rule" model="ir.rule">
        <field name="name">HR Evaluation:My and My Team Rule</field>
        <field name="model_id" ref="model_hr_evaluation"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(6, 0, [ref('hr_performance_evaluation.employee_performance_user_group')])]"/>
    </record>

    <record id="hr_evaluation_my_and_team_rule" model="ir.rule">
        <field name="name">HR Evaluation:My and My Team Rule</field>
        <field name="model_id" ref="model_hr_evaluation"/>
        <field name="domain_force">['|', ('user_id', '=', user.id), ('manager_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(6, 0, [ref('hr_performance_evaluation.employee_performance_all_group')])]"/>
    </record>

    <record id="hr_evaluation_all_rule" model="ir.rule">
        <field name="name">HR Evaluation: ALl Rule</field>
        <field name="model_id" ref="model_hr_evaluation"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(6, 0, [ref('hr_performance_evaluation.employee_performance_admin_group')])]"/>
    </record>

    <record id="hr_evaluation_performance_line_my_rule" model="ir.rule">
        <field name="name">HR Evaluation Performance Line:My and My Team Rule</field>
        <field name="model_id" ref="model_hr_evaluation_performance_line"/>
        <field name="domain_force">[('evaluation_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(6, 0, [ref('hr_performance_evaluation.employee_performance_user_group')])]"/>
    </record>

    <record id="hr_evaluation_performance_line_my_and_team_rule" model="ir.rule">
        <field name="name">HR Evaluation Performance Line:My and My Team Rule</field>
        <field name="model_id" ref="model_hr_evaluation_performance_line"/>
        <field name="domain_force">['|', ('evaluation_id.user_id', '=', user.id), ('evaluation_id.manager_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(6, 0, [ref('hr_performance_evaluation.employee_performance_all_group')])]"/>
    </record>

    <record id="hr_evaluation_performance_line_all_rule" model="ir.rule">
        <field name="name">HR Evaluation Performance Line: ALl Rule</field>
        <field name="model_id" ref="model_hr_evaluation_performance_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(6, 0, [ref('hr_performance_evaluation.employee_performance_admin_group')])]"/>
    </record>

</odoo>
