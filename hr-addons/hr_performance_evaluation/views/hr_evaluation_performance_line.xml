<odoo>

    <record id="hr_evaluation_performance_line_pivot" model="ir.ui.view">
        <field name="name">hr_evaluation_performance_line_pivot</field>
        <field name="model">hr.evaluation.performance.line</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="employee_id" type="row"/>
                <field name="evaluation_id" type="row"/>
                <field name="final_score_percentage" type="measure" widget="percentage"/>
            </pivot>
        </field>
    </record>

    <record id="hr_evaluation_performance_line_action" model="ir.actions.act_window">
        <field name="name">Employee Objective</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.evaluation.performance.line</field>
        <field name="view_mode">pivot</field>
    </record>

</odoo>
