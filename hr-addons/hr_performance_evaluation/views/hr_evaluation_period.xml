<odoo>

    <record id="hr_evaluation_period_tree" model="ir.ui.view">
        <field name="name">hr_evaluation_period_tree</field>
        <field name="model">hr.evaluation.period</field>
        <field name="arch" type="xml">
            <list editable="top" >
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="hr_evaluation_period_action" model="ir.actions.act_window">
        <field name="name">Period(s)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.evaluation.period</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
