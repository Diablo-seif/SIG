<odoo>

    <record id="hr_evaluation_batch_create_form" model="ir.ui.view">
        <field name="name">hr_evaluation_batch_create_form</field>
        <field name="model">hr.evaluation.batch.create</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="company_id" invisible="1"/>
                    <field name="period_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="deadline_date"/>
                </group>
                <field name="employee_ids" options="{'no_open': True, 'no_create': True}" context="{'search_default_group_department':1, 'search_default_group_job':1}"/>
                <footer>
                    <button name="action_create_evaluation" class="oe_highlight"
                            string="Create &amp; Send Evaluation"
                            type="object"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_evaluation_batch_create_action"
            model="ir.actions.act_window">
        <field name="name">Generate Performance Evaluation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.evaluation.batch.create</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
