<odoo>

    <record id="department_budget_line_form" model="ir.ui.view">
        <field name="name">Budget Lines</field>
        <field name="model">department.budget.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date_from" />
                        <field name="date_to" />
                        <field name="department_id" />
                        <field name="proposal_id"
                            options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" />
                        <field name="budget" sum="budget" />
                        <field name="actual_cost" sum="actual_cost" />
                        <field name="difference" sum="difference" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="department_budget_line_tree" model="ir.ui.view">
        <field name="name">Budget Lines</field>
        <field name="model">department.budget.line</field>
        <field name="arch" type="xml">
            <list edit="1" editable="top" decoration-danger="difference &lt; 0"
                decoration-success="difference >= 0">
                <field name="department_id" />
                <field name="date_from" />
                <field name="date_to" />
                <!-- <field name="po_number" /> -->
                <field name="proposal_id"
                    options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}" />
                <field name="budget" sum="budget" />
                <field name="actual_cost" sum="actual_cost" />
                <field name="difference" sum="difference" />
            </list>
        </field>
    </record>

    <record id="department_budget_line_view_pivot" model="ir.ui.view">
        <field name="name">department.budget.line.view.pivot</field>
        <field name="model">department.budget.line</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="department_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="department_budget_line_view_graph" model="ir.ui.view">
        <field name="name">department.budget.line.view.graph</field>
        <field name="model">department.budget.line</field>
        <field name="arch" type="xml">
            <graph>
                <field name="department_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="department_budget_line_search_view" model="ir.ui.view">
        <field name="name">department.budget.line.search</field>
        <field name="model">department.budget.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="department_id" />
                <field name="po_number" />
                <group expand="0" string="Group By">
                    <filter string="Department" name="groupby_department_id"
                        context="{'group_by':'department_id'}" />
                    <filter string="Date" name="date_from" context="{'group_by':'date_from:year'}" />
                    <filter string="Proposal" name="proposal_id" context="{'group_by':'proposal_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="department_budget_line_action" model="ir.actions.act_window">
        <field name="name">Salary Budget</field>
        <field name="res_model">department.budget.line</field>
        <field name="view_mode">list,form,pivot,graph</field>
        <field name="search_view_id" ref="department_budget_line_search_view" />
        <field name="context">{'search_default_groupby_department_id': True}</field>
    </record>
</odoo>