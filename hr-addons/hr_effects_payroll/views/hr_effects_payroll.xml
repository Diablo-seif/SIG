<odoo>

    <!-- HR Effects Payroll Manage Additions Type Form View-->
    <record id="view_hr_payroll_manage_additions_form" model="ir.ui.view">
        <field name="name">hr.payroll.manage.additions.form</field>
        <field name="model">hr.effects.payroll</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button class="oe_highlight" type="object"
                            name="action_approve" string="Approve"
                            states="draft"/>
                    <button type="object"
                            name="action_draft" string="Set Draft"
                            states="approved"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"
                                   readonly="state ==  'approved'"/>
<!--                                   attrs="{'readonly': [('state', '=', 'approved')]}"/>-->
                            <field name="effects_type_id"
                                   attrs="{'readonly': [('state', '=', 'approved')]}"
                                   domain="[('effects_category', '=', effects_category)]"
                                   string="Additions Type"
                                   context="{'default_effects_category':'additions'}"/>
                            <field name="note"
                                   attrs="{'readonly': [('state', '=', 'approved')]}"/>

                        </group>
                        <group>
                            <field name="effects_category" invisible="1"/>
                            <field name="effective_date"
                                   attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="value"
                                   attrs="{'readonly': [('state', '=', 'approved')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- HR Effects Payroll Manage deductions Category Form View-->
    <record id="view_hr_payroll_manage_deductions_form" model="ir.ui.view">
        <field name="name">hr.payroll.manage.deductions.form</field>
        <field name="model">hr.effects.payroll</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button class="oe_highlight" type="object"
                            name="action_approve" string="Approve"
                            states="draft"/>
                    <button type="object"
                            name="action_draft" string="Set Draft"
                            states="approved"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"
                                   attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="effects_type_id"
                                   attrs="{'readonly': [('state', '=', 'approved')]}"
                                   domain="[('effects_category', '=', effects_category)]"
                                   string="Deductions Category"
                                   context="{'default_effects_category':'deductions'}"/>
                            <field name="note"
                                   attrs="{'readonly': [('state', '=', 'approved')]}"/>

                        </group>
                        <group>
                            <field name="effects_category" invisible="1"/>
                            <field name="effective_date"
                                   attrs="{'readonly': [('state', '=', 'approved')]}"/>
                            <field name="value"
                                   attrs="{'readonly': [('state', '=', 'approved')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- HR Effects Payroll Manage Additions  Tree View-->
    <record id="view_hr_payroll_manage_additions_tree" model="ir.ui.view">
        <field name="name">hr.payroll.manage.additions.tree</field>
        <field name="model">hr.effects.payroll</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="effects_type_id"/>
                <field name="effective_date"/>
                <field name="value"/>
                <field name="state"/>
                <field name="effects_category" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- HR Effects Payroll Manage deductions Tree View-->
    <record id="view_hr_payroll_manage_deductions_tree" model="ir.ui.view">
        <field name="name">hr.payroll.manage.deductions.tree</field>
        <field name="model">hr.effects.payroll</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="effects_type_id"/>
                <field name="effective_date"/>
                <field name="value"/>
                <field name="state"/>
                <field name="effects_category" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- HR Effects Payroll additions  Action-->
    <record id="view_hr_payroll_manage_additions_action"
            model="ir.actions.act_window">
        <field name="name">Additions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.effects.payroll</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_effects_category': 'additions'}</field>
        <field name="domain">[('effects_category', '=', 'additions')]</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_hr_payroll_manage_additions_tree')}),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_hr_payroll_manage_additions_form')})]"/>
    </record>

    <!-- HR Effects Payroll deductions  Action-->
    <record id="view_hr_payroll_manage_deductions_action"
            model="ir.actions.act_window">
        <field name="name">Deductions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.effects.payroll</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'default_effects_category': 'deductions'}</field>
        <field name="domain">[('effects_category', '=', 'deductions')]</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_hr_payroll_manage_deductions_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_hr_payroll_manage_deductions_form')})]"/>
    </record>

    <!-- Effects Payroll Menu -->
    <menuitem id="menuitem_hr_effects_payroll"
              name="Payroll Effects"
              parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root"
              sequence="61"/>

    <!-- Manage Additions Menu -->
    <menuitem name="Additions"
              id="menu_hr_manage_additions"
              parent="menuitem_hr_effects_payroll"
              action="view_hr_payroll_manage_additions_action"
              groups="hr_effects_payroll.group_manage_hr_effects_payroll"
              sequence="1"/>

    <!-- Manage deductions Menu -->
    <menuitem name="Deductions"
              id="menu_hr_manage_deductions"
              parent="menuitem_hr_effects_payroll"
              action="view_hr_payroll_manage_deductions_action"
              groups="hr_effects_payroll.group_manage_hr_effects_payroll"
              sequence="2"/>

</odoo>
