<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_tna_set_provider_form" model="ir.ui.view">
        <field name="name">hr.tna.set.provider.form</field>
        <field name="model">hr.tna.set.provider</field>
        <field name="arch" type="xml">
            <form>
                <field name="course_provider_lines_ids">
                    <list editable="bottom" create="0">
                        <field name="course_id"/>
                        <field name="provider_id" options="{'no_open': True, 'no_create': True}" />
                        <field name="hr_tna_line_ids" widget="many2many_tags" invisible="1"/>
                        <field name="minimum_no_of_participants" invisible="1"/>
                        <field name="no_of_participants" invisible="1"/>
                    </list>
                </field>
                <footer>
                    <button name="set_provider" type="object" string="Set Provider" class="oe_highlight" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_tna_set_provider_action" model="ir.actions.act_window">
        <field name="name">Set Provider</field>
        <field name="res_model">hr.tna.set.provider</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_tna.model_hr_tna_line"/>
        <field name="groups_id" eval="[(4, ref('hr_tna.group_tna_budget'))]"/>
    </record>
</odoo>
