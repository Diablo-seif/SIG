<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_tna_courses_form" model="ir.ui.view">
        <field name="name">hr.tna.courses.form</field>
        <field name="model">hr.tna.courses</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,running,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="course_id" readonly="1"/>
                            <field name="estimated_date"
                                   readonly="state != 'pending'"/>
<!--                            attrs="{'readonly':[('state','!=','pending')]}"/>-->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_tna_courses_tree" model="ir.ui.view">
        <field name="name">hr.tna.courses.tree</field>
        <field name="model">hr.tna.courses</field>
        <field name="arch" type="xml">
            <list default_order="estimated_date">
                <field name="course_id"/>
                <field name="estimated_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="hr_tna_courses_kanban" model="ir.ui.view">
        <field name="name">hr.tna.courses.kanban</field>
        <field name="model">hr.tna.courses</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_hr_kanban_record">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <ul>
                                    <li>
                                        <field name="employee_id"/>
                                    </li>
                                    <li>
                                        <field name="course_id"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hr_tna_courses_search" model="ir.ui.view">
        <field name="name">hr.tna.courses.search</field>
        <field name="model">hr.tna.courses</field>
        <field name="arch" type="xml">
            <search>
                <field name="course_id"/>
                <filter string="Course" name="group_course_id"
                        context="{'group_by':'course_id'}"/>
                <filter string="Estimated Date" name="group_estimated_date"
                        context="{'group_by':'estimated_date'}"/>
                <filter string="State" name="group_state"
                        context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>

    <record id="hr_tna_courses_action" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">hr.tna.courses</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>
