<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="approve_tna_line_server_action" model="ir.actions.server">
        <field name="name">Approve</field>
        <field name="model_id" ref="model_hr_tna_line"/>
        <field name="binding_model_id" ref="model_hr_tna_line"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('hr_tna.group_tna_manager'))]"/>
        <field name="code">
            action = records.action_approve()
        </field>
    </record>

    <record id="reject_tna_line_server_action" model="ir.actions.server">
        <field name="name">Reject</field>
        <field name="model_id" ref="model_hr_tna_line"/>
        <field name="binding_model_id" ref="model_hr_tna_line"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="groups_id" eval="[(4, ref('hr_tna.group_tna_manager'))]"/>
        <field name="code">
            action = records.action_reject()
        </field>
    </record>

</odoo>
