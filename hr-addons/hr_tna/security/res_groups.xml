<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="category_tna" model="ir.module.category" >
        <field name="name">Training Needs Assessment</field>
    </record>

    <record id="group_tna_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="category_tna"/>
    </record>

    <record id="group_tna_budget" model="res.groups">
        <field name="name">Budget</field>
        <field name="category_id" ref="category_tna"/>
        <field name="implied_ids" eval="[(4, ref('group_tna_user'))]"/>
    </record>

    <record id="group_tna_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="category_tna"/>
        <field name="implied_ids" eval="[(4, ref('group_tna_budget'))]"/>
    </record>

    <record id="rule_hr_tna_line_user" model="ir.rule">
        <field name="name">TNA User Manage Own Lines</field>
        <field name="model_id" ref="model_hr_tna_line"/>
        <field name="groups" eval="[(4, ref('group_tna_user'))]"/>
        <field name="domain_force">[('department_id.manager_id', '=', user.employee_id.id)]</field>
    </record>

    <record id="rule_hr_tna_line_budget" model="ir.rule">
        <field name="name">TNA Budget Manage all Lines</field>
        <field name="model_id" ref="model_hr_tna_line"/>
        <field name="groups" eval="[(4, ref('group_tna_budget'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="rule_hr_tna_user" model="ir.rule">
        <field name="name">TNA User Manage Own TNA</field>
        <field name="model_id" ref="model_hr_tna"/>
        <field name="groups" eval="[(4, ref('group_tna_user'))]"/>
        <field name="domain_force">[('department_ids.manager_id', '=', user.employee_id.id)]</field>
    </record>

    <record id="rule_hr_tna_budget" model="ir.rule">
        <field name="name">TNA Budget Manage All TNA</field>
        <field name="model_id" ref="model_hr_tna"/>
        <field name="groups" eval="[(4, ref('group_tna_budget'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>
