<odoo>
    <record id="view_salary_input_line_tree" model="ir.ui.view">
        <field name="name">salary.input.line.tree</field>
        <field name="model">salary.input.line</field>
        <field name="arch" type="xml">
            <list edit="1" editable="top">
                <field name="contract_id"/>
                <field name="name" />
                <field name="code"/>
                <field name="value"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </list>
        </field>
    </record>

    <record id="view_salary_input_line_action" model="ir.actions.act_window">
        <field name="name">Salary Input Line</field>
        <field name="res_model">salary.input.line</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_salary_input_line_tree"/>
    </record>
</odoo>