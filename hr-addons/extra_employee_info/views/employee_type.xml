<odoo>
    <record id="view_employee_type_form" model="ir.ui.view">
        <field name="name">employee.type.form</field>
        <field name="model">employee.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="type" widget="radio" />
                    </group>
                    <group invisible="type != external" >
<!--                        attrs="{'invisible': [('type', '!=', 'external')]}"-->
                        <field name="state_id" attrs="{'required': [('type', '=', 'external')]}"/>
                        <field name="partner_id" attrs="{'required': [('type', '=', 'external')]}"/>
                    </group>
                    <group invisible="type != external" >
<!--                        attrs="{'invisible': [('type', '!=', 'external')]}"-->
                        <field name="company_id" attrs="{'required': [('type', '=', 'internal')]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_employee_type_tree" model="ir.ui.view">
        <field name="name">employee.type.tree</field>
        <field name="model">employee.type</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="type" />
            </list>
        </field>
    </record>

    <record id="view_employee_type_action" model="ir.actions.act_window">
        <field name="name">Employee types</field>
        <field name="res_model">employee.type</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>