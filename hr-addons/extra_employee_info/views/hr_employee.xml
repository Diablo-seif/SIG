<odoo>
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">view.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <field name="department_id" position="attributes">
                <attribute name="domain">[('type', '=', type)]</attribute>
            </field>
            <field name="mobile_phone" position="before">
                <field name="access_tags_ids" widget="many2many_tags"
                 options="{'color_field': 'color', 'no_create':True}"/>
                <field name="type" widget="radio"/>
                <field name="employee_type_id"/>
            </field>
            <field name="department_id" position="before">
                <field name="state_id" options='{"no_create": True}'/>
                <field name="zone_id" options='{"no_create": True}'/>
                <field name="office_id"/>
            </field>
            <field name="department_id" position="after">
                <field name="analytic_account_id"/>
            </field>
            <field name="department_id" position="attributes">
                <attribute name="required">1</attribute>
            </field>
            <field name="birthday" position="after">
                <field name="age"/>
            </field>
            <xpath expr="//page[@name='hr_settings']" position="after">
                <page name="extra_info" string="Extra Info">
