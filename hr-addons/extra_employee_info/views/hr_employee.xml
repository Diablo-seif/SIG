    </record>

    <record id="view_hr_employee_extra_search" model="ir.ui.view">
        <field name="name">hr.employee.extra.search</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <filter name="my_team" position="before">
                <filter string="External" name="filter_external"
                        domain="[('type','=','external')]"/>
                <filter string="Internal" name="filter_internal"
                        domain="[('type','=','internal')]"/>
                <separator/>
            </filter>
            <xpath expr="//filter[@name='group_category_ids']" position="after">
                <separator/>
                <filter string="Governorate" name="groupby_governorate"
                        context="{'group_by': 'state_id'}"/>
                <filter string="Zone" name="groupby_zone" context="{'group_by': 'zone_id'}"/>
                <filter string="Analytic Account" name="groupby_analytic_account_id"
                        context="{'group_by': 'analytic_account_id'}"/>
                <filter string="Type" name="groupby_type" context="{'group_by': 'type'}"/>
            </xpath>
        </field>
    </record>

    <record id="hr_employee_view_pivot" model="ir.ui.view" >
        <field name="name">hr.employee.view.pivot</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="name" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="hr.open_view_employee_list_my" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,kanban,pivot,form,activity</field>
    </record>
</odoo>