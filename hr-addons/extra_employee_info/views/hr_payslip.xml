<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- hr.payslip search view -->
    <record id="inherit_hr_payslip_view_search" model="ir.ui.view">
        <field name="name">hr.payslip.view.search</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_filter" />
        <field name="arch" type="xml">
            <filter name="credit_note" position="after">
                <separator />
                <filter string="External" name="filter_external"
                    domain="[('employee_type','=','external')]" />
                <filter string="Internal" name="filter_internal"
                    domain="[('employee_type','=','internal')]" />
            </filter>
            <xpath expr="//filter[@name='group_by_department_id']" position="before">
                <filter string="Year" name="groupby_year" context="{'group_by': 'date_to:year'}" />
                <filter string="Month" name="groupby_month"
                    context="{'group_by': 'date_to:month'}" />
                <filter string="Type" name="groupby_type" context="{'group_by': 'employee_type'}" />
            </xpath>
            <xpath expr="//filter[@name='group_by_company_id']" position="after">
                <filter string="Governorate" name="groupby_governorate"
                    context="{'group_by': 'state_id'}" />
            </xpath>
        </field>
    </record>

    <record id="hr_employee_view_graph" model="ir.ui.view" >
        <field name="name">hr.payslip.view.graph</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <graph>
                <field name="name" type="row"/>
            </graph>
        </field>
    </record>

    <record id="hr_employee_view_pivot" model="ir.ui.view" >
        <field name="name">hr.payslip.view.pivot</field>
        <field name="model">hr.payslip</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="name" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="hr_payroll.action_view_hr_payslip_month_form" model="ir.actions.act_window">
        <field name="name">Employee Payslips</field>
        <field name="res_model">hr.payslip</field>
        <field name="view_mode">list,kanban,form,activity,graph,pivot</field>
        <field name="context">{
            'search_default_groupby_year': 1,
            'search_default_groupby_month':1,
            'search_default_groupby_type':1,
            'search_default_group_by_department_id':1,
            'search_default_groupby_governorate':1,
            }</field>
    </record>
</odoo>