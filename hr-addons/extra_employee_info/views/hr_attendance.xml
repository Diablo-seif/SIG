<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- hr.attendance search view -->
    <record id="inherit_hr_attendance_view_search" model="ir.ui.view">
        <field name="name">hr.attendance.view.search</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_filter" />
        <field name="arch" type="xml">
            <filter name="myattendances" position="after">
                <separator />
                <filter string="External" name="filter_external"
                    domain="[('employee_type','=','external')]" />
                <filter string="Internal" name="filter_internal"
                    domain="[('employee_type','=','internal')]" />
            </filter>
            <xpath expr="//filter[@name='groupby_check_out']" position="before">
                <filter string="Year" name="group_by_year" context="{'group_by': 'check_in:year'}" />
                <filter string="Month" name="group_by_month"
                    context="{'group_by': 'check_in:month'}" />
                <filter string="Type" name="group_by_type" context="{'group_by': 'employee_type'}" />
                <filter string="Department" name="group_by_department_id" context="{'group_by': 'department_id'}" />
            </xpath>
            <xpath expr="//filter[@name='groupby_check_out']" position="after">
                <filter string="Governorate" name="group_by_governorate"
                    context="{'group_by': 'state_id'}" />
            </xpath>
        </field>
    </record>

    <record id="hr_attendance.hr_attendance_action" model="ir.actions.act_window">
        <field name="name">Employee attendances</field>
        <field name="res_model">hr.attendance</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{
            'search_default_group_by_year': 1,
            'search_default_group_by_month':1,
            'search_default_group_by_type':1,
            'search_default_group_by_department_id':1,
            'search_default_group_by_governorate':1,
            }</field>
    </record>
</odoo>