<odoo>
    <record id="view_hr_office_tree" model="ir.ui.view">
        <field name="name">hr.office.tree</field>
        <field name="model">hr.office</field>
        <field name="arch" type="xml">
            <list edit="1" editable="top">
                <field name="name" />
            </list>
        </field>
    </record>

    <record id="view_hr_office_action" model="ir.actions.act_window">
        <field name="name">HR Office</field>
        <field name="res_model">hr.office</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>