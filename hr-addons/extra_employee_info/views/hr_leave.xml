<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- hr.leave search view -->
    <record id="inherit_hr_leave_view_search" model="ir.ui.view">
        <field name="name">hr.leave.view.search</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_search_my" />
        <field name="arch" type="xml">
            <filter name="my_team" position="after">
                <separator />
                <filter string="External" name="filter_external"
                    domain="[('employee_type','=','external')]" />
                <filter string="Internal" name="filter_internal"
                    domain="[('employee_type','=','internal')]" />
            </filter>
            <xpath expr="//filter[@name='group_employee']" position="before">
                <!-- <filter string="Year" name="group_by_year" context="{'group_by': 'date_from:year'}" />
                <filter string="Month" name="group_by_month"
                    context="{'group_by': 'date_from:month'}" /> -->
                <filter string="Type" name="group_by_type" context="{'group_by': 'employee_type'}" />
                <filter string="Department" name="group_by_department_id" context="{'group_by': 'department_id'}" />
            </xpath>
            <xpath expr="//filter[@name='group_employee']" position="after">
                <filter string="Governorate" name="group_by_governorate"
                    context="{'group_by': 'state_id'}" />
            </xpath>
        </field>
    </record>

    <record id="hr_holidays.hr_leave_action_my" model="ir.actions.act_window">
        <field name="name">Employee leaves</field>
        <field name="res_model">hr.leave</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{
          
            'search_default_group_by_type':1,
            'search_default_group_by_department_id':1,
            'search_default_group_by_governorate':1,
            }</field>
    </record>
</odoo>