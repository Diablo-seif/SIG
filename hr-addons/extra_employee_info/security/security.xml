<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="employee_category" model="ir.module.category">
        <field name="name">Employee</field>
    </record>

    <record id="group_internal_employee" model="res.groups">
        <field name="name">Internal Employee</field>
        <field name="category_id" ref="employee_category"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_outsource_employee" model="res.groups">
        <field name="name">Outsource Employee</field>
        <field name="category_id" ref="employee_category"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="rule_access_internal_employee" model="ir.rule">
        <field name="name">Access Internal Employee</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="domain_force">[('type', '=', 'internal')]</field>
        <field name="groups" eval="[(6, 0, [ref('extra_employee_info.group_internal_employee')])]"/>
    </record>

    <record id="rule_access_outsource_employee" model="ir.rule">
        <field name="name">Access Outsource Employee</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="domain_force">[('type', '=', 'external')]</field>
        <field name="groups" eval="[(6, 0, [ref('extra_employee_info.group_outsource_employee')])]"/>
    </record>

    <record id="rule_employee_access_all" model="ir.rule">
        <field name="name">Employee Access All</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="groups" eval="[(6, 0, [ref('hr.group_hr_manager')])]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="rule_employee_access_tags" model="ir.rule">
        <field name="name">Employee Access Tags</field>
        <field name="model_id" ref="model_hr_employee"/>
        <field name="domain_force">[('access_tags_ids', 'in', user.access_tags_ids.ids)]</field>
    </record>

    <record id="rule_attendance_access_tags" model="ir.rule">
        <field name="name">Attendance Access Tags</field>
        <field name="model_id" ref="hr_attendance.model_hr_attendance"/>
        <field name="domain_force">[('employee_id.access_tags_ids', 'in', user.access_tags_ids.ids)]</field>
    </record>

    <record id="rule_leave_access_tags" model="ir.rule">
        <field name="name">Leave Access Tags</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave"/>
        <field name="domain_force">[('employee_id.access_tags_ids', 'in', user.access_tags_ids.ids)]</field>
    </record>

    <record id="rule_allocation_access_tags" model="ir.rule">
        <field name="name">Allocation Access Tags</field>
        <field name="model_id" ref="hr_holidays.model_hr_leave_allocation"/>
        <field name="domain_force">[('employee_id.access_tags_ids', 'in', user.access_tags_ids.ids)]</field>
    </record>

    <record id="rule_contract_access_tags" model="ir.rule">
        <field name="name">Contract Access Tags</field>
        <field name="model_id" ref="hr_contract.model_hr_contract"/>
        <field name="domain_force">[('employee_id.access_tags_ids', 'in', user.access_tags_ids.ids)]</field>
    </record>

    <record id="rule_salary_input_line_access_tags" model="ir.rule">
        <field name="name">Salary Input Lines Access Tags</field>
        <field name="model_id" ref="hr_salary_input.model_salary_input_line"/>
        <field name="domain_force">[('contract_id.employee_id.access_tags_ids', 'in', user.access_tags_ids.ids)]</field>
    </record>
</odoo>
