<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_compute_wizard_form" model="ir.ui.view">
        <field name="name">hr.compute.wizard.form</field>
        <field name="model">hr.compute.wizard</field>
        <field name="arch" type="xml">
            <form create="false"
                  duplicate="false" edit="false" delete="false">
                <sheet>
                    <group string="Re-Schedule Compute Lines">
                        <field name="count_selected" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_re_schedule"
                            string="Re-Schedule" type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_re_compute_attendance" model="ir.actions.act_window">
        <field name="name">Re-Schedule Compute Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.compute.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id"
               ref="model_hr_compute_attendance_line"/>
    </record>

</odoo>

