<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="job_offer_reject_form" model="ir.ui.view">
        <field name="name">job.offer.reject.form</field>
        <field name="model">job.offer.reject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="action_reason_ids"
                               widget="many2many_tags"
                               options="{'color_field': 'color'}"
                               domain="[('res_model','=','hr.job.offer')]" />
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note" placeholder="Notes ..."/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_reject" type="object" string="Reject" class="oe_highlight" />
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="job_offer_reject_action" model="ir.actions.act_window">
        <field name="name">Job Offer Reject</field>
        <field name="res_model">job.offer.reject</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
