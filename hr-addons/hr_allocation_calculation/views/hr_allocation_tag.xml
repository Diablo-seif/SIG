<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_allocation_tag_tree" model="ir.ui.view">
        <field name="name">hr.allocation.tag.tree</field>
        <field name="model">hr.allocation.tag</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="hr_allocation_tag_action" model="ir.actions.act_window">
        <field name="name">Allocation Tag</field>
        <field name="res_model">hr.allocation.tag</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="hr_allocation_tag_menu" 
              name="Allocation Tag" 
              action="hr_allocation_tag_action" 
              parent="hr_holidays.menu_hr_holidays_configuration"
              sequence="20"/>
    
</odoo>
