<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_leave_type_inherit_view_form" model="ir.ui.view">
        <field name="name">hr.leave.type.inherit.view.form</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form" />
        <field name="arch" type="xml">
            
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Time Off No. Of Days">
                        <field name="tag_ids" string="Tags">
                            <list editable="bottom">
                                <field name="allocation_tag_id" />
                                <field name="number_of_days" string="Number Of Days/Year"  />
                            </list>
                        </field>
                    </page>
                </notebook>

            </xpath>
        </field>
    </record>
 
</odoo>
