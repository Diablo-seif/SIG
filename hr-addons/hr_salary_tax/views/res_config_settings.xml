<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payroll_res_config_settings_form" model="ir.ui.view">
        <field name="name">payroll.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_localization']" position="after">
                <h2>Salary Tax</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="month_start" string="Apply Tax On"/><br/>
                            <field name="month_start"/>
                            <div class="text-muted">
                                Tax rule based on payslip start date / end date.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
