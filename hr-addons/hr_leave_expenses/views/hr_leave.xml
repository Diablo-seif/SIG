<odoo>

    <record id="hr_leave_view_form_manager_inherit" model="ir.ui.view">
        <field name="name">hr.leave.form.inherit</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                 <field name="sheet_id" readonly="1" force_save="1"
                               invisible="sheet_id = False"/>
<!--                        attrs="{'invisible': [('sheet_id', '=', False)]}"  />-->
            </xpath>
        </field>
    </record>

</odoo>
