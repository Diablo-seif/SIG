<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dynamic_approval_category_form" model="ir.ui.view">
        <field name="name">dynamic.approval.category.form</field>
        <field name="model">approval.category</field>
        <field name="inherit_id" ref="approvals.approval_category_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='description']" position="after">
                <field name="model_id"
                       options="{'no_open': True, 'no_create': True}"/>

                <field name="model" invisible="1"/>
                <field name="action_id"
                       domain="[('res_model', '=', model)]"
                       invisible="model_id = False"
                       required="model_id != False"
                       options="{'no_open': True, 'no_create': True}"/>
                <!--                       attrs="{'invisible':[('model_id','=',False)],'required':[('model_id','!=',False)]}"-->
                <field name="domain" widget="domain"
                       options="{'model': 'model', 'in_dialog': true}"
                       invisible="model_id = False"/>
                <!--                       attrs="{'invisible':[('model_id','=',False)]}"-->
                <field name="context"
                       invisible="model_id = False"/>
                <!--                       attrs="{'invisible':[('model_id','=',False)]}"-->
            </xpath>
            <xpath expr="//page[@name='options']" position="attributes">
                <invisible name="attrs">
                    model_id = False
                </invisible>
            </xpath>
        </field>
    </record>

    <record id="dynamic_approval_category_kanban" model="ir.ui.view">
        <field name="name">dynamic.approval.category.kanban</field>
        <field name="model">approval.category</field>
        <field name="inherit_id" ref="approvals.approval_category_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='create_request']/following::button"
                   position="attributes">
                <attribute name="name">view_request</attribute>
                <attribute name="type">object</attribute>
            </xpath>
        </field>
    </record>

</odoo>
