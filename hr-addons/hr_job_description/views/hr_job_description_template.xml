<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_job_description_template_form" model="ir.ui.view">
        <field name="name">hr.job.description.template.form</field>
        <field name="model">hr.job.description.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name"/></h1>
                    </div>
                    <notebook>
                        <page string="Job Description">
                            <field name="job_description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_job_description_template_tree" model="ir.ui.view">
        <field name="name">hr.job.description.template.tree</field>
        <field name="model">hr.job.description.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="hr_job_description_template_action" model="ir.actions.act_window">
        <field name="name">Job Description Template</field>
        <field name="res_model">hr.job.description.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="hr_job_description_template_menu"
              name="Job Description Templates"
              action="hr_job_description_template_action"
              parent="hr_recruitment.menu_hr_recruitment_configuration"/>

</odoo>
