<odoo>
    <!-- Modify Payslip Form -->
        <record model="ir.ui.view" id="hr_payslip_run_view_form">
            <field name="name">hr.payslip.run.inherit.form</field>
            <field name="model">hr.payslip.run</field>
            <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_validate']" position="replace">
                    <button string="Create Draft Entry" name="action_payslip_done" 
                    type="object" confirm="Are you sure you want to proceed ?"
                    class="oe_highlight" states="verify"/>
                </xpath>
                <field name="company_id"  position="after">
                    <field name="proposal_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
                </field>
            </field>
        </record>
</odoo>