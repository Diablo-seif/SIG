                <field name="tardiness" optional="hide" />
                <field name="unattended_days" optional="hide" />
                <field name="absence_penalties" optional="hide" />
                <field name="other_deduction" optional="hide" />
                <field name="un_working_contract_days_penalties" optional="hide" />
