<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="edit_holiday_status_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.type.form.inherit</field>
        <field name="model">hr.leave.type</field>
        <field name="inherit_id" ref="hr_leaves_holidays.edit_holiday_status_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category']" position="after">
                <field name="max_excuse_times"
                       invisible="category != excuse"
                />
                <field name="max_excuse_hours_per_month"  invisible="category != excuse""
                       widget="float_time"/>
            </xpath>
        </field>
    </record>

</odoo>
