<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="create_enroll_form_form" model="ir.ui.view">
        <field name="name">create.enroll.form.form</field>
        <field name="model">create.enroll.form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="method" widget="radio"
                                   options="{'horizontal': True}"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="round_value"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="create_enroll_form" string="Create Form" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="create_enroll_form_action" model="ir.actions.act_window">
        <field name="name">Create Enroll Form</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.enroll.form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_view_types">list,form</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
    </record>

</odoo>
