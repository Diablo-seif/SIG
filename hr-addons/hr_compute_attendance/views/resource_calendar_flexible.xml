<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_resource_calendar_flexible_form" model="ir.ui.view">
        <field name="name">resource_calendar_flexible.form</field>
        <field name="model">resource.calendar.flexible</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Title"
                                   required="True"/>
                        </h1>
                    </div>
                    <group>
                        <field name="day_hours" widget="float_time"/>
                    </group>
                    <group>
                        <group>
                            <field name="allow_attend_before_schedule"/>
                            <field name="allowed_from_midday"
                                   invisible="allow_attend_before_schedule = False"/>
                            <field name="allowed_from"
                                   invisible="allow_attend_before_schedule = False or allowed_from_midday != False)]}"/>
                        </group>
                        <group>
                            <field name="allow_attend_after_schedule"/>
                            <field name="allowed_to_midday"
                                   invisible="allow_attend_before_schedule = False"/>
                            <field name="allowed_to"
                                   invisible="allow_attend_after_schedule = False or allowed_to_midday != False"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
