<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_compute_attendance_tree" model="ir.ui.view">
        <field name="name">hr.compute.attendance.tree</field>
        <field name="model">hr.compute.attendance</field>
        <field name="arch" type="xml">
            <list create="true" duplicate="true" edit="true" delete="true">
                <field name="name"/>
                <field name="description"/>
                <field name="month"/>
                <field name="year"/>
                <field name="employee_ids" optional="hide"/>
                <field name="compute_ids" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="view_hr_compute_attendance_form" model="ir.ui.view">
        <field name="name">hr.compute.attendance.form</field>
        <field name="model">hr.compute.attendance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_compute"
                            string="Compute Attendance"
                            class="oe_highlight" states="draft" type="object"/>
                    <field name="state" widget="statusbar" invisible="1"
                           statusbar_visible="draft,in_progress,done"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_inline oe_stat_button"
                                name="open_compute_lines" type="object"
                                icon="fa-folder-open">
                            <field string="Open Lines" name="count_lines"
                                   widget="statinfo"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" readonly="True"/>
                        </h1>
                    </div>

                    <div>
                        <field name="company_id"/>
                        <label for="month"/>:
                        <field name="month" class="oe_inline"
                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <![CDATA[ &nbsp; ]]><![CDATA[ &nbsp; ]]>
                        <![CDATA[ &nbsp; ]]>
                        <label for="year"/>:
                        <field name="year" class="oe_inline"
                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </div>
                    <div>
                        <label for="start_date"/>:
                        <field name="start_date" class="oe_inline"
                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        <![CDATA[ &nbsp; ]]><![CDATA[ &nbsp; ]]>
                        <![CDATA[ &nbsp; ]]>
                        <label for="end_date"/>:
                        <field name="end_date" class="oe_inline"
                               attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                    </div>
                    <group>
                        <group>
                            <field name="description"
                                   attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="company_id" required="1"
                                   groups="base.group_multi_company"
                                   options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employees and Departments"
                              name="select_employees_departments">
                            <p class="text-center">
                                If Not Selected Any Employees or Any Department
                                The Computed Will Run For All Employees
                            </p>
                            <group>
                                <group string="Employees">
                                    <field name="employee_ids"
                                           domain="[('company_id', '=', company_id)]"
                                           nolabel="1">
                                        <list>
                                            <field name="name"/>
                                            <field name="department_id"/>
                                            <field name="parent_id"/>
                                        </list>
                                    </field>
                                </group>
                                <group string="Departments">
                                    <field name="department_ids"
                                           domain="[('company_id', '=', company_id)]"
                                           nolabel="1">
                                        <list>
                                            <field name="name"/>
                                        </list>
                                    </field>
                                </group>
                            </group>
                        </page>

                        <page string="Computed Lines" name="computed_lines">

                            <field name="compute_ids" nolabel="1" readonly="1">
                                <list>
                                    <field name="employee_id"/>
                                    <field name="department_id"/>
                                    <field name="sum_working_schedule_hours"/>
                                    <field name="sum_total_actual_working_hours"/>
                                    <field name="sum_total_missing_hours"
                                           optional="hide"/>
                                    <field name="sum_total_penalty_percentage"/>
                                    <field name="sum_total_penalty_amount"/>
                                    <field name="sum_attend_interval"
                                           optional="hide"/>
                                    <field name="sum_interval_count"
                                           optional="hide"/>
                                    <field name="sum_absent_interval"
                                           optional="hide"/>
                                    <field name="sum_absent_penalty_value"/>
                                    <field name="week_deduction_hours"
                                           optional="hide"/>
                                    <field name="month_deduction_hours"
                                           optional="hide"/>
                                    <field name="last_computed"
                                           optional="hide"/>
                                    <button name="compute_line"
                                            string="Re-Compute"
                                            type="object"/>
                                    <button name="open_line" string="Open"
                                            class="fas fa-external-link-alt"
                                            type="object" optional="hide"/>
                                </list>
                                <form>
                                    <group>
                                        <group>
                                            <field name="employee_id"
                                                   readonly="1"/>
                                            <field name="start_date"
                                                   readonly="1"/>
                                            <field name="sum_working_schedule_hours"
                                                   readonly="1"/>
                                            <field name="sum_total_actual_working_hours"
                                                   readonly="1"/>
                                            <field name="sum_total_missing_hours"
                                                   readonly="1"/>
                                            <field name="sum_total_penalty_percentage"
                                                   readonly="1"/>
                                            <field name="sum_total_penalty_amount"
                                                   readonly="1"/>
                                            <field name="last_computed"
                                                   readonly="1"/>
                                            <field name="week_deduction_hours"
                                                   readonly="1"/>
                                            <field name="month_deduction_hours"
                                                   readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="end_date"
                                                   readonly="1"/>
                                            <field name="sum_attend_interval"
                                                   readonly="1"/>
                                            <field name="sum_interval_count"
                                                   readonly="1"/>
                                            <field name="sum_absent_interval"
                                                   readonly="1"/>
                                            <field name="sum_absent_penalty_value"
                                                   readonly="1"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hr_compute_attendance_action"
            model="ir.actions.act_window">
        <field name="name">Compute Attendance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.compute.attendance</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>


    <menuitem id="menu_hr_compute_attendance" name="Compute Attendance"
              action="view_hr_compute_attendance_action"
              parent="hr_attendance.menu_hr_attendance_view_attendances"
              sequence="90"/>

</odoo>
