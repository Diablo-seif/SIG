<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_manpower_plan_line_form" model="ir.ui.view">
        <field name="name">hr.manpower.plan.line.form</field>
        <field name="model">hr.manpower.plan.line</field>
        <field name="arch" type="xml">
            <form create="0">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,budgeted,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="department_id"
                                   readonly="state !=draft"
                                   groups="hr_manpower_plan.group_manpower_plan_manager,hr.group_hr_manager"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="job_id"
                                   readonly="state !=draft"/>
                            <field name="no_of_employee"/>
                            <field name="planned_no_of_position"
                                   readonly="state !=draft"/>
                            <field name="approved_no_of_position"
                                   groups='hr_manpower_plan.group_manpower_plan_manager'
                                   readonly="state != 'budgeted'"/>
                            <!--                                   attrs="{'readonly':[('state','!=','budgeted')]}"/>-->
                        </group>
                        <group>
                            <field name="reason"
                                   readonly="state !=draft"/>
                            <field name="start_date"
                                   readonly="state !=draft"/>
                            <field name="unit_budget" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="state != 'submitted'"/>
                            <!--                                   attrs="{'readonly':[('state','!=','submitted')]}"/>-->
                            <field name="total_budget" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="approved_budget" widget="monetary"
                                   options="{'currency_field': 'currency_id'}"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>

                </sheet>
                <chatter/>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids"/>-->
<!--                    <field name="activity_ids"/>-->
<!--                    <field name="message_ids"/>-->
<!--                </div>-->
            </form>
        </field>
    </record>

    <record id="hr_manpower_plan_line_tree" model="ir.ui.view">
        <field name="name">hr.manpower.plan.line.tree</field>
        <field name="model">hr.manpower.plan.line</field>
        <field name="arch" type="xml">
            <list decoration-bf="state == 'draft'"
                  decoration-info="state == 'submitted'"
                  decoration-success="state == 'approved'"
                  decoration-danger="state == 'rejected'">
                <field name="department_id"
                       readonly="state !=draft"/>
                <field name="job_id"
                       context="{'job_with_contract_type':True}"
                       domain="[('department_id','=',department_id)]"
                       readonly="state !=draft"/>
                <field name="no_of_employee"/>
                <field name="planned_no_of_position"
                       readonly="state !=draft"/>
                <field name="approved_no_of_position"
                       groups='hr_manpower_plan.group_manpower_plan_manager'
                       readonly="state != budgeted"/>
                <field name="reason"
                       readonly="state !=draft"/>
                <field name="start_date"
                       readonly="state !=draft"/>
                <field name="unit_budget" widget="monetary"
                       groups='hr_manpower_plan.group_manpower_plan_budget'
                       options="{'currency_field': 'currency_id'}"
                       readonly="state != submitted"/>
                <field name="total_budget" widget="monetary"
                       groups='hr_manpower_plan.group_manpower_plan_budget'
                       sum="Planned Budget" options="{'currency_field': 'currency_id'}"/>
                <field name="approved_budget" sum="Approved Budget" widget="monetary"
                       groups='hr_manpower_plan.group_manpower_plan_budget'
                       options="{'currency_field': 'currency_id'}"/>
                <field name="currency_id" invisible="1"/>

                <button name="action_submit" type="object" string="Submit"
                        icon="fa-check text-info"
                        invisible="state != draft"/>
                <button name="action_budget" type="object" icon="fa-dollar"
                        string="Submit Budget"
                        groups='hr_manpower_plan.group_manpower_plan_budget'
                        invisible="state != submitted"/>
                <button name="action_approve" type="object" string="Approve"
                        icon="fa-check text-success"
                        groups="hr_manpower_plan.group_manpower_plan_manager"
                        invisible="state != budgeted"/>
                <button name="action_reject" type="object"
                        string="Reject" icon="fa-ban text-danger"
                        groups="hr_manpower_plan.group_manpower_plan_manager"
                        invisible="state != budgeted"/>
                <!--                        attrs="{'invisible':[('state','!=','budgeted')]}"/>-->
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="hr_manpower_plan_line_search" model="ir.ui.view">
        <field name="name">hr.manpower.plan.line.search</field>
        <field name="model">hr.manpower.plan.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="reason"/>
                <field name="start_date"/>
                <group expand="0" string="Group By">
                    <filter string="Department" name="group_department_id"
                            context="{'group_by':'department_id'}"/>
                    <filter string="Job" name="group_job_id"
                            context="{'group_by':'job_id'}"/>
                    <filter string="Reason" name="group_reason"
                            context="{'group_by':'reason'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hr_manpower_plan_line_action" model="ir.actions.act_window">
        <field name="name">Department Manpower Plan</field>
        <field name="res_model">hr.manpower.plan.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_group_department_id':'1'}</field>
    </record>

</odoo>
