    <record id="hr_manpower_plan_tree" model="ir.ui.view">
        <field name="name">hr.manpower.plan.tree</field>
        <field name="model">hr.manpower.plan</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="hr_manpower_plan_action" model="ir.actions.act_window">
        <field name="name">Manpower Plan</field>
        <field name="res_model">hr.manpower.plan</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="manpower_plan_menu"
              name="Manpower Plan"
              action="hr_manpower_plan_action"
              parent="hr_recruitment.menu_hr_recruitment_root"
              sequence="3"/>

