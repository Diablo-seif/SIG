<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="insurance_sector_period_form" model="ir.ui.view">
        <field name="name">insurance.sector.period.form</field>
        <field name="model">insurance.sector.period</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="employee_percentage"/>
                            <field name="company_percentage"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Insurance Details">
                            <field name="sector_line_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="employee_percentage"/>
                                    <field name="company_percentage"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="insurance_sector_period_action" model="ir.actions.act_window">
        <field name="name">Insurance Sector Period</field>
        <field name="res_model">insurance.sector.period</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="insurance_sector_form" model="ir.ui.view">
        <field name="name">insurance.sector.form</field>
        <field name="model">insurance.sector</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_percentage"/>
                            <field name="company_percentage"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Insurance Periods">
                            <field name="sector_period_ids">
                                <list>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="employee_percentage"/>
                                    <field name="company_percentage"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="insurance_sector_tree" model="ir.ui.view">
        <field name="name">insurance.sector.tree</field>
        <field name="model">insurance.sector</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_percentage"/>
                <field name="company_percentage"/>
            </list>
        </field>
    </record>

    <record id="insurance_sector_action" model="ir.actions.act_window">
        <field name="name">Insurance Sector</field>
        <field name="res_model">insurance.sector</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="insurance_sector_menu"
              name="Sector"
              action="insurance_sector_action"
              parent="insurance_menu"/>
</odoo>
