<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="insurance_job_form" model="ir.ui.view">
        <field name="name">insurance.job.form</field>
        <field name="model">insurance.job</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="insurance_job_tree" model="ir.ui.view">
        <field name="name">insurance.job.tree</field>
        <field name="model">insurance.job</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="insurance_job_action" model="ir.actions.act_window">
        <field name="name">Insurance Job</field>
        <field name="res_model">insurance.job</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="insurance_job_menu"
              name="Jobs"
              action="insurance_job_action"
              parent="insurance_menu"/>

</odoo>
