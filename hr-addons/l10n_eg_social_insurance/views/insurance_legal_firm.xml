<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="insurance_legal_firm_form" model="ir.ui.view">
        <field name="name">insurance.legal.firm.form</field>
        <field name="model">insurance.legal.firm</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="insurance_legal_firm_tree" model="ir.ui.view">
        <field name="name">insurance.legal.firm.tree</field>
        <field name="model">insurance.legal.firm</field>
        <field name="arch" type="xml">
            <list editable="top">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="insurance_legal_firm_action" model="ir.actions.act_window">
        <field name="name">Insurance Legal Firm</field>
        <field name="res_model">insurance.legal.firm</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="insurance_legal_firm_menu"
              name="Legal Firm"
              action="insurance_legal_firm_action"
              parent="insurance_menu"/>

</odoo>
