<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_hr_employee_search" model="ir.ui.view">
        <field name="name">inherit.hr.employee.search</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='group_job']" position="after">
                <field name="total_insurance_years"/>
            </xpath>
        </field>
    </record>

    <record id="insurance_hr_employee_form" model="ir.ui.view">
        <field name="name">insurance.hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='coach_id']" position="after">
                <field name="total_insurance_years"/>
            </xpath>
        </field>
    </record>

</odoo>
