<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_documents_tree" model="ir.ui.view">
        <field name="name">hr.employee.documents.tree</field>
        <field name="model">hr.employee.documents</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="has_expiration"/>
                <field name="require_original"/>
                <field name="default_document"/>
            </list>
        </field>
    </record>

    <record id="hr_employee_documents_action" model="ir.actions.act_window">
        <field name="name">Employee Documents</field>
        <field name="res_model">hr.employee.documents</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="hr_config_employee_documents_menu"
              name="Employee Documents" 
              action="hr_employee_documents_action" 
              parent="hr.menu_human_resources_configuration"
              sequence="3"/>

</odoo>
