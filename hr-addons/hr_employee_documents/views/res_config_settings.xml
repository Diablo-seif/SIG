<!--<?xml version="1.0" encoding="utf-8"?>-->
<odoo>

    <record id="res_config_settings_employee_document_expiry_form" model="ir.ui.view">
        <field name="name">res.config.settings.employee.document.expiry.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr']/div[2]" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box"
                         title="When to schedule activity before employee documents be expired">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div class="row">
                                    <label string="Employee Documents Expiration"
                                           for="employee_document_expiry"
                                           class="col-md-3 o_light_label"/>
                                    <field name="employee_document_expiry"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
