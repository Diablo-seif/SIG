<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="proposal_multi_company_rule" model="ir.rule">
        <field name="name">Proposal multi-company</field>
        <field name="model_id" ref="model_proposal_proposal"/>
        <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
    </record>
    
    <record id="proposal_yearly_financial_multi_company_rule" model="ir.rule">
