<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="proposal_tag_tree" model="ir.ui.view">
        <field name="name">proposal.tag.tree</field>
        <field name="model">proposal.tag</field>
        <field name="arch" type="xml">
            <list editable="top" decoration-muted="active == True">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="is_outsourcing"/>
            </list>
        </field>
    </record>

    <record id="proposal_tag_action" model="ir.actions.act_window">
        <field name="name">Proposal Tags</field>
        <field name="res_model">proposal.tag</field>
        <field name="view_mode">list,form</field>
        <field name="context">{"active_test": False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>

    <menuitem id="proposal_tag_menu"
            name="Proposal Tag"
            action="proposal_tag_action"
            parent="proposal.proposal_config_menu"
            groups="proposal.group_proposal_admin"
            sequence="10"/>

</odoo>
