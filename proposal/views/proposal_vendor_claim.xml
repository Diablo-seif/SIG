<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="proposal_vendor_claim_form" model="ir.ui.view">
        <field name="name">proposal.vendor.claim.form</field>
        <field name="model">proposal.vendor.claim</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="move_ids" invisible="1"/>
                    <button name="action_propose" string="submit" type="object" invisible="state != 'draft'"
                            class="oe_highlight"/>
                    <button name="action_done" string="Done" type="object" invisible="state != 'propose'"
                            class="oe_highlight"/>
                    <button name="action_create_bill" string="Create Bill" type="object"
                            invisible="state != 'done' or move_ids" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,propose,done"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_view_bills" string="Invoices" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o">
                            <field name="move_ids" string="Invoices" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group class="o_label_nowrap">
                        <group>
                            <field name="proposal_id"/>
                            <field name="claim_id" readonly="1" domain="[('state', '=', 'done')]"/>
                            <field name="partner_id"/>
                            <field name="analytic_account_id"/>
                        </group>
                        <group>
                            <field name="claim_date" readonly="state != 'draft'"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="lines" string="Lines">
                            <field name="line_ids" readonly="state == 'done'">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="proposal_line_id" invisible="1" force_save="1"/>
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="name" readonly="1" force_save="1"/>
                                    <field name="uom_id" readonly="1" force_save="1"/>
                                    <field name="original_qty" readonly="1" force_save="1" optional="show"
                                           sum="Original Qty"/>
                                    <field name="previous_qty" readonly="1" force_save="1" optional="show"
                                           sum="Previous Qty"/>
                                    <field name="remaining_qty" readonly="1" force_save="1" optional="show"
                                           sum="Remaining Qty"/>
                                    <field name="current_qty_percentage" widget="percentage" force_save="1"
                                           readonly="cumulative_percentage" optional="show"/>
                                    <field name="current_qty" force_save="1" readonly="cumulative_percentage"
                                           optional="show" sum="Current Qty"/>
                                    <field name="cumulative_qty" readonly="1" force_save="1" optional="show"
                                           sum="Cumulative Qty"/>
                                    <field name="cumulative_percentage" widget="percentage" readonly="1" force_save="1"
                                           optional="show"/>
                                    <field name="unit_cost" readonly="1" force_save="1" optional="show"/>
                                    <field name="current_amount" readonly="1" force_save="1" optional="show"
                                           sum="Current Amount"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
<!--                <div class="oe_chatter">-->
<!--                    <field name="message_follower_ids"/>-->
<!--                    <field name="activity_ids"/>-->
<!--                    <field name="message_ids"/>-->
<!--                </div>-->
            </form>
        </field>
    </record>

    <record id="proposal_vendor_claim_tree" model="ir.ui.view">
        <field name="name">proposal.vendor.claim.tree</field>
        <field name="model">proposal.vendor.claim</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="claim_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="proposal_vendor_claim_action" model="ir.actions.act_window">
        <field name="name">Vendor Claims</field>
        <field name="res_model">proposal.vendor.claim</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'create': 0}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
    </record>

    <menuitem id="proposal_vendor_claim_menu"
              name="Vendor Claims"
              action="proposal_vendor_claim_action"
              parent="proposal_root_menu"
              sequence="20"/>

</odoo>
