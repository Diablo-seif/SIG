<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="proposal_activity_report_graph" model="ir.ui.view">
        <field name="name">proposal.activity.report.graph</field>
        <field name="model">proposal.activity.report</field>
        <field name="arch" type="xml">
            <graph string="Activities Analysis" sample="1">
                <field name="mail_activity_type_id"/>
                <field name="date" type="row" interval="month"/>
            </graph>
        </field>
    </record>
    <!--    proposal_activity_report_graph-->
    <!--                <field name="date" interval="month"/>-->


    <record id="proposal_activity_report_pivot" model="ir.ui.view">
        <field name="name">proposal.activity.report.pivot</field>
        <field name="model">proposal.activity.report</field>
        <field name="arch" type="xml">
            <pivot string="Activities Analysis" sample="1">
                <field name="mail_activity_type_id" type="col"/>
                <field name="date" interval="month" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="proposal_activity_report_tree" model="ir.ui.view">
        <field name="name">proposal.activity.report.tree</field>
        <field name="model">proposal.activity.report</field>
        <field name="arch" type="xml">
            <list default_order="date desc">
                <field name="date"/>
                <field name="author_id"/>
                <field name="mail_activity_type_id"/>
                <field name="body"/>
            </list>
        </field>
    </record>

    <record id="proposal_activity_report_search" model="ir.ui.view">
        <field name="name">proposal.activity.report.search</field>
        <field name="model">proposal.activity.report</field>
        <field name="arch" type="xml">
            <search string="Activities Analysis">
                <field name="mail_activity_type_id" string="Activity Type"/>
                <field name="proposal_id"/>
                <field name="user_id"/>
                <field name="author_id" string="Assigned To"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Activity" name="group_by_activity_type"
                            context="{'group_by': 'mail_activity_type_id'}"/>
                    <filter string="Type" name="group_by_subtype" context="{'group_by': 'subtype_id'}"/>
                    <filter string="Assigned To" name="group_by_author_id" context="{'group_by': 'author_id'}"/>
                    <filter string="Completion Date" name="group_by_completion_date"
                            context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="proposal_activity_report_action" model="ir.actions.act_window">
        <field name="name">Proposal Activity Report</field>
        <field name="res_model">proposal.activity.report</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="help" type="html">
            <p>
                Start scheduling activities on your Proposal
            </p>
        </field>
    </record>

    <menuitem id="proposal_activity_report_menu"
              name="Proposal Activity Report"
              action="proposal_activity_report_action"
              parent="proposal_report_menu"
              groups="base.group_no_one"
              sequence="30"/>
</odoo>
