<odoo>
    <record id="inherit_proposal_purchase_order_form" model="ir.ui.view">
        <field name="name">inherit.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="analytic_account_id"/>
            </field>
            <xpath expr="//page[@name='products']/field[@name='order_line']/list/field[@name='price_unit']" position="attributes">
              <attribute name="widget">monetary</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherit_purchase_order_kpis_tree" model="ir.ui.view">
        <field name="name">inherit.purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="analytic_account_id"/>
            </field>
        </field>
    </record>

    <record id="inherit_purchase_order_tree" model="ir.ui.view">
        <field name="name">inherit.purchase.order.tree</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field name="analytic_account_id"/>
            </field>
        </field>
    </record>
</odoo>