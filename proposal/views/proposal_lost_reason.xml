<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="proposal_lost_reason_form" model="ir.ui.view">
        <field name="name">proposal.lost.reason.form</field>
        <field name="model">proposal.lost.reason</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="proposal_lost_reason_tree" model="ir.ui.view">
        <field name="name">proposal.lost.reason.tree</field>
        <field name="model">proposal.lost.reason</field>
        <field name="arch" type="xml">
            <list decoration-muted="active == False">
                <field name="name"/>
                <field name="description"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="proposal_lost_reason_action" model="ir.actions.act_window">
        <field name="name">Proposal Lost Reason</field>
        <field name="res_model">proposal.lost.reason</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document
            </p>
        </field>
        <field name="context">{"active_test": False}</field>
    </record>

    <menuitem id="proposal_lost_reason_menu"
            name="Proposal Lost Reason"
            action="proposal_lost_reason_action"
            parent="proposal.proposal_config_menu"
            sequence="10"/>
</odoo>
