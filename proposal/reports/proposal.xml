<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="proposal_template">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center mb-4"><span t-field="o.name"/></h2>
                        <table class="table table-condensed table-sm">
                            <tr>
                                <th>Partner</th>
                                <td><span t-field="o.partner_id"/></td>
                                <th>Date</th>
                                <td><span t-field="o.date_order"/></td>
                            </tr>
                        </table>
                        <table class="table table-bordered table-sm">
                            <thead class="text-center table-primary">
                                <tr>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th>UOM</th>
                                    <th>Quantity</th>
                                    <th>Taxes</th>
                                    <th>Unit Price</th>
                                    <th>Total Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.line_ids" t-as="line">
                                    <td><span t-field="line.product_id"/></td>
                                    <td><span t-field="line.name"/></td>
                                    <td><span t-field="line.uom_id"/></td>
                                    <td><span t-field="line.product_uom_qty"/></td>
                                    <td><span t-field="line.sales_tax_ids"/></td>
                                    <td><span t-field="line.unit_price"/></td>
                                    <td><span t-field="line.price"/></td>
                                </tr>
                                <tr class="text-center table-primary">
                                    <td colspan="6">Total</td>
                                    <td><span t-field="o.expected_revenue"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="proposal_report" model="ir.actions.report">
        <field name="name">Proposal</field>
        <field name="model">proposal.proposal</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">proposal.proposal_template</field>
        <field name="report_file">proposal.proposal_template</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref="model_proposal_proposal"/>
        <field name="attachment_use" eval="True"/>
        <field name="attachment">object.name + ".pdf"</field>
        <field name="print_report_name">object.name</field>
    </record>
</odoo>
