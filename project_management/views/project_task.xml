<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="project_task_form" model="ir.ui.view">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <!--            <field name="tag_ids" position="after">-->
            <!--                <field name="weight" widget="percentage"/>-->
            <!--            </field>-->
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="weight" widget="percentage"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']/list/field[@name='company_id']" position="before">
                <field name="weight" widget="percentage" optional="show"/>
            </xpath>
            <xpath expr="//field[@name='user_ids']/../.." position="attributes">
                <attribute name="class">o_label_nowrap</attribute>
            </xpath>
            <xpath expr="//field[@name='planned_hours']" position="attributes">
                <attribute name="widget"></attribute>
            </xpath>
            <xpath expr="//field[@name='unit_amount']" position="attributes">
                <attribute name="widget"></attribute>
                <attribute name="string">Effort</attribute>
            </xpath>
            <page id="timesheets_tab" position="attributes">
                <attribute name="string">Effort</attribute>
            </page>
            <group name="project_hours" position="replace">
                <group class="oe_subtotal_footer oe_right" name="project_hours">
                    <field name="effective_hours" string="Spent Effort"/>
                    <field name="subtask_effective_hours" string="Sub-tasks Spent Effort"/>
                    <field name="total_hours_spent" string="Total Effort"/>
                    <field name="remaining_hours" sum="Remaining  Effort"/>
                    <field name="progress" widget="progressbar"/>
                </group>
            </group>
            <xpath expr="//field[@name='user_ids']/../.." position="inside">
                <group>
                    <field name="planned_hours" string="Planned Effort"/>
                    <field name="subtask_planned_hours" string="Sub-tasks Planned Effort"/>
                    <field name="remaining_planned_hours" string="Remaining Planned Effort" optional="hide"/>
                </group>
                <group>
                    <field name="effective_hours" string="Spent Effort"/>
                    <field name="subtask_effective_hours" string="Sub-tasks Spent Effort"/>
                    <field name="total_hours_spent" string="Total Effort"/>
                    <field name="remaining_hours" sum="Remaining  Effort"/>
                    <field name="progress" widget="progressbar"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
