<odoo>

        <record id="view_job_grade_tree" model="ir.ui.view">
            <field name="name">sig.job.grade.tree</field>
            <field name="model">sig.job.grade</field>
            <field name="arch" type="xml">
                <list editable="top">
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="action_sig_job_grade_view" model="ir.actions.act_window">
            <field name="name">Job Grades</field>
            <field name="res_model">sig.job.grade</field>
            <field name="view_mode">list</field>
        </record>

</odoo>
