<odoo>
    <template id="request_card_report_template">
        <t t-call="web.basic_layout">
            <main>
                <div class="page">
                    <h2 style="text-align:center;">تقرير طلبات الكروت</h2>

                    <table style="width:100%; border-collapse: collapse; font-size: 12px; margin-top: 30px;" dir="rtl">
                        <thead>
                            <tr style="background-color: #f0f0f0;">
                                <th class="p-1" style="border: 1px solid #000;">الاسم بالكامل</th>
                                <th class="p-1" style="border: 1px solid #000;">الرقم القومي</th>
                                <th class="p-1" style="border: 1px solid #000;">الدرجة الوظيفية</th>
                                <th class="p-1" style="border: 1px solid #000;">الوظيفة</th>
                                <th class="p-1" style="border: 1px solid #000;">الكود الوظيفي</th>
                                <th class="p-1" style="border: 1px solid #000;">رقم الهاتف</th>
                                <th class="p-1" style="border: 1px solid #000;">المحافظة</th>
                                <th class="p-1" style="border: 1px solid #000;">الصورة</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="rec">
                                <tr>
                                    <td class="text-center p-1" style="border: 1px solid #000;">
                                        <t t-esc="rec.full_name"/>
                                    </td>
                                    <td class="text-center p-1" style="border: 1px solid #000;">
                                        <t t-esc="rec.national_id"/>
                                    </td>
                                    <td class="text-center p-1" style="border: 1px solid #000;">
                                        <t t-esc="rec.job_grade_id.name"/>
                                    </td>
                                    <td class="text-center p-1" style="border: 1px solid #000;">
                                        <t t-esc="rec.job_position_id.name"/>
                                    </td>
                                    <td class="text-center p-1" style="border: 1px solid #000;">
                                        <t t-esc="rec.job_code"/>
                                    </td>
                                    <td class="text-center p-1" style="border: 1px solid #000;">
                                        <t t-esc="rec.phone_number"/>
                                    </td>
                                    <td class="text-center p-1" style="border: 1px solid #000;">
                                        <t t-esc="rec.governorate_id.name"/>
                                    </td>
                                    <td style="border: 1px solid #000; text-align: center;">
                                        <t t-if="rec.image">
                                            <img t-att-src="'data:image/png;base64,' + rec.image.decode('utf-8')"
                                                 style="max-width: 60px; max-height: 60px;"/>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </main>
        </t>
    </template>
</odoo>
