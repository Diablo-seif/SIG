<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_account_payment_form" model="ir.ui.view">
        <field name="name">inherit.account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <field name="payment_type" position="after">
                <field name="is_shareholder" readonly="state != 'draft' "
                       invisible="partner_type != 'supplier' or is_internal_transfer =  True" />
                <field name="shareholder_id" string="Shareholder"
                    invisible="is_shareholder = False" />
            </field>

            <xpath expr="//field[@name='partner_id'][2]" position="attributes">
                <attribute name="invisible">
                    is_shareholder =  True or partner_type != 'supplier' or is_internal_transfer =  True
                    
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>