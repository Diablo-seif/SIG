<odoo>
    <record id="view_token_wizard_form" model="ir.ui.view">
        <field name="name">token.wizard.form</field>
        <field name="model">token.wizard</field>
        <field name="arch" type="xml">
            <form string="Generated Token">
                <div>
                    Please copy the token below and send it to the central system to complete the
                    integration process.
                </div>
                <h5>
                    <field name="token" />
                </h5>
                <footer>
                    <button string="Close" class="btn-primary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>