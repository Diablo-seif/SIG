<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View project.project form -->
    <record id="view_project_project_form" model="ir.ui.view">
        <field name="name">view.project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="location" />
                <field name="project_type" />
                <field name="contracting_party" />
                <field name="contractor" />
                <field name="expected_number_of_hours" />
                <field name="number_of_hours_consumed" />
            </xpath>
        </field>
    </record>

</odoo>