<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View res.partner form -->
    <record id="view_res_partner_form" model="ir.ui.view">
        <field name="name">view.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="partner_legal_information.res_partner_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='national_id']" position="after">
                <field name="commercial_register"/>
                <field name="nationality"/>
                <field name="passport" invisible="nationality = egyptian" />
<!--                <field name="passport" attrs="{'invisible': [('nationality', '=', 'egyptian')]}" />-->
            </xpath>
        </field>
    </record>

</odoo>